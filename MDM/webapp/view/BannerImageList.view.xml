<mvc:View displayBlock="true" controllerName="com.knpl.pragati.MDM.controller.BannerImageList" height="100%"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f"
        xmlns:st="sap.ui.comp.smarttable"
		xmlns:form="sap.ui.layout.form">

    <f:DynamicPage id="banerImageListPageId" headerExpanded="true" toggleHeaderOnTitleClick="true" busy="{banerImageListView>/busy}" busyIndicatorDelay="0">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>banerImage}"/>
                </f:heading>
                <f:actions>
                    <!-- <OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" id="enterFullScreenBtn" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
                    <OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" id="exitFullScreenBtn" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
                    <OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/> -->
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <Table id="bannerImagetable" width="auto"
				items="{ path: '/MasterLanguageSet', parameters : filters : { path : 'IsArchived' , operator : 'EQ' , value1 : false }, sorter: { path: 'Id', descending: false } }"
				busyIndicatorDelay="{banerImageListView>/tableBusyDelay}" growing="true" growingThreshold="15" growingScrollToLoad="false">
				<headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>btnAdd}" type="Emphasized" icon="sap-icon://add" press="onAdd">
							<layoutData>
								<OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
                    <Column width="20%">
						<Text text="{i18n>colLanguage}"/>
					</Column>
                    <Column width="20%">
						<Text text="{i18n>colLanguageCode}"/>
					</Column>
					<Column width="40%">
						<Text text="{i18n>colLanguageDescription}"/>
					</Column>
                    <Column width="20%">
						<Text text="{i18n>colAction}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Language}"/>
							<Text text="{LanguageCode}"/>
							<Text text="{LanguageDescription}"/>
                            <HBox>
                                <Button icon="sap-icon://edit" press="onEdit" type="Transparent" tooltip="Edit"/>
                                <Button icon="sap-icon://delete" press="onDelete" type="Transparent" tooltip="Delete"/>
                            </HBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <Button icon="sap-icon://message-popup"
                        text="{/messagesLength}"
                        type="Emphasized"
                        press="onMessageButtonPress"
                        visible="{= !!${/messagesLength}}"/>
                <ToolbarSpacer/>
                <Button type="Accept" text="Accept"/>
                <Button type="Reject" text="Reject"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
