<mvc:View controllerName="com.knpl.pragati.Training.controller.ListMaster" xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:tnt="sap.tnt" xmlns:ui="sap.ui.table" height="100%" xmlns:smartTable="sap.ui.comp.smarttable">

    <Page title="Training Types" class="sapUiContentPadding" showNavButton="true" showHeader="true">
        <headerContent>
            <Toolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://navigation-right-arrow" text="Add New Master Training Type"/>

            </Toolbar>
        </headerContent>
        <content>
            <smartTable:SmartTable id="smartTable" entitySet="MasterTrainingTypeSet" tableType="ResponsiveTable" showRowCount="true" useExportToExcel="false" ignoredFields="CreatedAt,CreatedBy,UpdatedAt,UpdatedBy,IsArchived,DivisionId" ignoreFromPersonalisation="" useVariantManagement="false" useTablePersonalisation="true" demandPopin="true" enableAutoBinding="true" header="Line Items" placeToolbarInTable="true" beforeRebindTable="onBeforeRebindTable" persistencyKey="SmartTablePKey" initiallyVisibleFields="TrainingType">
