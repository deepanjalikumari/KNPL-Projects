                        <Column>
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "Id", "columnIndex":"3", "leadingProperty": "Id"}'/>
                            </customData>
                            <Text text="Edit"/>
                        </Column>
                        <Column>
                            <customData>
                                <core:CustomData key="p13nData" value='\{"columnKey": "IsSelected", "columnIndex":"4", "leadingProperty": "Id"}'/>
                            </customData>
                            <Text text="Remove"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Button icon="sap-icon://edit" type="Transparent" press="onPressEdit" tooltip="Edit"></Button>
                            </cells>
                            <cells>
                                <Button icon="sap-icon://delete" type="Transparent" press="onPressRemove" tooltip="Remove"></Button>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>
