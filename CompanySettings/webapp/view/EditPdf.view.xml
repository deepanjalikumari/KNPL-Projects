<mvc:View
	controllerName="com.knpl.pragati.CompanySettings.controller.EditPdf"
    class="sapUiSizeCompact"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc">
    <Page title="{i18n>title}">
	<VBox class="sapUiSmallMargin">
		<VBox class="sapUiMediumMargin">
                    <Table  width="auto" items="{path: 'local>/Catalogue', templateShareable: false}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false">
                                        <headerToolbar>
                                            <Toolbar>
                                                <Title text="{i18n>catalogues}" />
                                                <ToolbarSpacer />
                                                <Button press="onAddCatalogue" type="Emphasized" text="Add" />
                                            </Toolbar>
                                        </headerToolbar>
                                            <columns>
                                                <Column>
                                                    <Text text="{i18n>selectLanguage}" />
                                                </Column>
                                                <Column >
                                                    <Text text="{i18n>selectCatalogue}" />
                                                </Column>
                                                <Column >
                                                    <Text text="Media Name" />
                                                </Column>

                                                <Column width="10%">
                                                    <Text text="{i18n>Action}" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <VBox>
                                                        <Select
                                                            forceSelection="false"
                                    
                                                            selectedKey="{local>LanguageCode}"
                                                            items="{
                                                                path: '/MasterLanguageSet',
                                                                sorter: { path: 'Id' },
                                                                templateShareable: true
                                                            }">
                                                            <core:Item key="{LanguageCode}" text="{Language}" />
                                                            </Select>
                                                        
                                                        </VBox>
                                                
                                                        <VBox >
                                                            <FlexBox>
                                                                <VBox>
                                                                <u:FileUploader
                                                                    id="idFormToolPdfUploader"
                                                                    name="formToolPdfUploader"
                                                                    tooltip="{i18n>fileUploaderTooltip}"
                                                                    change="onChangePdf"
                                                                    typeMissmatch="handleTypeMissmatch"
                                                                    fileType="pdf"
                                                                    useMultipart="false"
                                                                    sendXHR="true"
                                                                    maximumFileSize="10.1"
                                                                    fileSizeExceed="onFileSizeExceed"
                                                                    uploadComplete="handleUploadCompletePdf" />
                                                                    <HBox>
                                                                <ObjectAttribute class="sapUiTinyMargin" title="File Type" text="PDF"/>
                                                                <ObjectAttribute class="sapUiTinyMargin" title="Max Size" text="10 MB"/>
                                                                </HBox>
                                                                </VBox>
                                                            </FlexBox>
                                                        
                                                        </VBox>
                                                         <VBox >
                                                            <Text text="{local>MediaName}"></Text>
                                                            </VBox>

                                                        <HBox>
                                                            <!-- <Button  icon="sap-icon://edit" type="Transparent" visible="{= ${ActionViewModel>/Catalogue} !== null}"/> -->
                                                    
                                                            <Button id="pdfBtn" icon="sap-icon://pdf-attachment"  type="Transparent" press="openPdf" class="sapUiTinyMarginEnd"/>
                                                            <Button icon="sap-icon://delete" press="onPressRemoveCatalogue" type="Transparent" tooltip="{i18n>Remove}" />
                                                        
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                            </Table>
                                         
             
                     </VBox>
	</VBox>
    <footer>
                    <OverflowToolbar>
                    
                        <ToolbarSpacer/>
                        

                       
                            
                            <!-- <Button id="cancel" text="Cancel" press="handleCancelPress" /> -->
                            <Button id="save" text="Save" type="Emphasized"  press="_updatePdf" />
                        
                        
                    </OverflowToolbar>
            </footer>
		</Page>
</mvc:View>