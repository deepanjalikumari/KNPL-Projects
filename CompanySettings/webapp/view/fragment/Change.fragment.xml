		<f:SimpleForm 
			editable="false"
			layout="ColumnLayout"
			title="Company Settings Details"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="3"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<f:content>
            
				<core:Title text="About Us"/>
				 <TextArea   required="true" 
                width="100%" rows="10"
        				placeholder="Enter About Us ..."
        				valueStateText="About Us must not be empty."
                        value="{ 
                                  path : 'AboutUs', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1
                                      
                                  }
                              }" />
				
				<core:Title text="Privacy Policy" />
				<TextArea  required="true"  width="100%" rows="10"
        				placeholder="Enter Privacy policy ..."
        				valueStateText="Privacy policy must not be empty."
