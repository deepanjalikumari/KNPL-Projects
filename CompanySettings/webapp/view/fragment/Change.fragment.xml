<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:richtexteditor="sap.ui.richtexteditor">
	<VBox class="sapUiSmallMargin" >
    <!-- <HBox class="sapUiTinyMargin">
    <Title text="Company Settings Details" />
    </HBox> -->

   
            <VBox class="sapUiTinyMargin" width="100%">
                 <Title text="About Us"/>
                <richtexteditor:RichTextEditor 
                width="100%"
                sanitizeValue="false"
                required="true"
                        value="{path : 'ActionEditModel>/AboutUs'}">
                </richtexteditor:RichTextEditor>
            </VBox>
            <VBox class="sapUiTinyMargin" width="100%">
               <Title text="Privacy Policy"/>
                <richtexteditor:RichTextEditor
                 width="100%"
                 sanitizeValue="false"
                 required="true"
                 value="{path : 'ActionEditModel>/Disclaimer'}">
                 </richtexteditor:RichTextEditor>
                 <!-- <TextArea visible="true" value="{path:'ActionEditModel>/Disclaimer'}"/> -->
            </VBox>
        
        
            <VBox class="sapUiTinyMargin"  width="100%">
            <Title text="Call Center Number"/>
            <Input   required="true"  type="Text"
                maxLength="15"
                width="30%"
        				placeholder="Enter Call Center Number ..."
        				valueStateText="Call Center Number must not be empty."
                        value="{path : 'ActionEditModel>/CallCenterHelpline'}"/>
                              </VBox>
       
	
	</VBox>
</core:FragmentDefinition>