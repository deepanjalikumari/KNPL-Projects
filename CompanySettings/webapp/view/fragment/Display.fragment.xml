<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:richtexteditor="sap.ui.richtexteditor">
	<VBox class="sapUiSmallMargin">
  
    	<!-- <HeaderContainer>
		<Title text="Details" />
		
	</HeaderContainer> -->
        <HBox class="sapUiSmallMarginEnd" width="100%" justifyContent="End" >
        <Button icon="sap-icon://edit" text="Edit" type="Emphasized" press="onEditTextContent" />
        </HBox>

    <HBox width="100%">
            <VBox class="sapUiTinyMargin" width="100%">
                 <Title text="About Us"/>
                
                	<FormattedText htmlText="{AboutUs}"/>
            </VBox>
            <VBox class="sapUiTinyMargin" width="100%">
               <Title text="Privacy Policy"/>
                
                 <FormattedText htmlText="{Disclaimer}"/>
            </VBox>
            
        </HBox>
        <HBox class="sapUiTinyMargin" width="100%">
            <VBox class="sapUiTinyMargin"  width="100%">
            <Title text="Call Center Number"/>
            
                               <FormattedText htmlText="{CallCenterHelpline}"/>
                              </VBox>
                              
        </HBox>

        
		
	</VBox>
</core:FragmentDefinition>