<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:richtexteditor="sap.ui.richtexteditor">
	<VBox class="sapUiSmallMargin">
  
    	<!-- <HeaderContainer>
		<Title text="Details" />
		
	</HeaderContainer> -->
        <HBox class="sapUiSmallMarginEnd" width="100%" justifyContent="End" >
        <Button  text="Edit" type="Emphasized" icon="sap-icon://edit" press="onEditTextContent" />
        </HBox>

    <HBox width="100%">
            <VBox class="sapUiTinyMargin" width="100%">
                 <Title text="About Us"/>
                
                	<FormattedText htmlText="{AboutUs}"/>
            </VBox>
            <VBox class="sapUiTinyMargin" width="100%">
               <Title text="Privacy Policy"/>
                
                 <FormattedText htmlText="{Disclaimer}"/>
            </VBox>
            
        </HBox>
        <HBox class="sapUiTinyMargin" width="70%">
            <VBox class="sapUiTinyMargin">
                <Title text="Call Center Number"/>
                <FormattedText htmlText="{CallCenterHelpline}" />
             </VBox>
             <VBox class="sapUiTinyMargin">
                        <Title text="Offer Enabled"   class="sapUiLargeMarginBegin"/>
                        <Switch  class="sapUiLargeMarginBegin" state="{path : 'IsOfferEnabled'}" customTextOn="Yes" customTextOff="No"  enabled="false">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </Switch>
            </VBox>
             <VBox  class="sapUiTinyMargin">
                <Title text="Bank Redemption" class="sapUiLargeMarginBegin"/>
                <Switch class="sapUiLargeMarginBegin" state="{path : 'IsRedemptionEnabled'}" customTextOn="Yes" customTextOff="No" enabled="false">
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Switch>
             </VBox>
             
                              
        </HBox>

        
		
	</VBox>
</core:FragmentDefinition>