<mvc:View controllerName="com.knpl.pragati.CompanySettings.controller.Home" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:u="sap.ui.unified"
xmlns:f="sap.ui.layout.form">
	<Shell id="shell">
		<App id="app">
			<pages>
            <Page>
            <VBox visible="{=!${local>/bEdit}}">
            
            <core:Fragment
            
                fragmentName="com.knpl.pragati.CompanySettings.view.fragment.Display" type="XML"> 
            </core:Fragment></VBox>

                <VBox visible="{local>/bEdit}" >
                <core:Fragment
             
                fragmentName="com.knpl.pragati.CompanySettings.view.fragment.Change" type="XML"> 
            </core:Fragment>
                </VBox>
                    <VBox class="sapUiMediumMargin">
                                         <List id="idPdf" items="{path: 'local>/Catalogue'}"  noDataText="{i18n>tableNoDataText}">
                                            <headerToolbar>
                                                <Toolbar>
                                                <Title text="{i18n>pdf}" />
                                                    <ToolbarSpacer/>
                                                    <Button press="onAddCatalogue" type="Emphasized" text="Add" visible="{=${local>/bEdit}}"/>
                                                </Toolbar>
                                            </headerToolbar>
                                            <CustomListItem type="Active">
                                                
                                                    <HBox alignItems="Start" justifyContent="SpaceBetween">
                                                      <Select
                                                    forceSelection="false"
                                    
                                                    selectedKey="{local>LanguageCode}"
                                                    items="{
                                                        path: '/MasterLanguageSet',
                                                        sorter: { path: 'Id' },
                                                        templateShareable: true
                                                    }">
                                                    <core:Item key="{LanguageCode}" text="{Language}" />
                                                    </Select>
                                                    <FlexBox>
                                                    <VBox visible="{=${local>/bEdit}}">
                                                    <u:FileUploader
                                                        id="idFormToolPdfUploader"
                                                        name="formToolPdfUploader"
                                                        tooltip="{i18n>fileUploaderTooltip}"
                                                        change="onChangePdf"
                                                        typeMissmatch="handleTypeMissmatch"
                                                        fileType="pdf"
                                                        useMultipart="false"
                                                        sendXHR="true"
                                                        maximumFileSize="10.1"
                                                        fileSizeExceed="onFileSizeExceed"
                                                        uploadComplete="handleUploadCompletePdf" />
                                                        <HBox>
                                                <ObjectAttribute class="sapUiTinyMargin" title="File Type" text="PDF"/>
                                                <ObjectAttribute class="sapUiTinyMargin" title="Max Size" text="2 MB"/>
                                                </HBox>
                                                </VBox>
                                                        </FlexBox>
                                    
                                                <Button id="pdfBtn" icon="sap-icon://pdf-attachment"  press="openPdf" text="View" class="sapUiTinyMargin increaseFont"/>
                                                            
                                                <Button icon="sap-icon://delete" press="onPressRemoveCatalogue" visible="{=${local>/bEdit}}" type="Transparent" tooltip="{i18n>Remove}" />
                                                       
                                                    </HBox>
                                            
                                               
                                            </CustomListItem>
                                        </List>
             
                     </VBox>
            <footer>
            <OverflowToolbar>
            
				<ToolbarSpacer/>
                

                <Button id="edit" text="Edit" type="Emphasized" press="handleEditPress" />
					
					<Button id="cancel" text="Cancel" visible="false" press="handleCancelPress" />
                    <Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress" />
                
                 
			</OverflowToolbar>
            </footer>
		</Page>
				
			</pages>
		</App>
	</Shell>
</mvc:View>
