<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.Role" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page>
         <VBox class="sapUiSmallMargin">
        <f:SimpleForm id="editRoleForm"
			editable="true"
			layout="ColumnLayout"
			title="Edit Role"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			><f:content>
				<Label text="Role" labelFor="role" design="Bold" />
		<Input id="role" required="true" type="Text"
        				placeholder="Enter Role ..."
        				valueStateText="Role must not be empty."
                         value="{data>Role}"/>

        <Label text="Description" labelFor="role" design="Bold" />
		<Input id="description" required="true" type="Text"
        				placeholder="Enter Description ..."
        				valueStateText="Description must not be empty."
                        value="{data>Description}"/>
		
			</f:content>
		</f:SimpleForm>
	</VBox>
	
    <footer>
			<Toolbar>
            <Button
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
				<ToolbarSpacer/>
                <Button text="Clear" press="onClearPress" visible="{= ${message>/}.length > 0 }"/>
				<Button text="Update"
                type="Emphasized"
						press="update"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					
				</Button>
                  <Button text="Cancel"
                type="Emphasized"
						press="onCancelPress"
						>
					
				</Button>
			</Toolbar>
		</footer>
    </Page>
</mvc:View>
