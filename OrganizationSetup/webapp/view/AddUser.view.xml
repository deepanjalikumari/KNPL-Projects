<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.User" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page>
        <VBox class="sapUiSmallMargin">
		<f:SimpleForm id="addUserForm"
			editable="true"
			layout="ColumnLayout"
			title="Add User"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
				<Label text="Name" labelFor="name" design="Bold" />
		<Input id="name" required="true"
        	                type="Text"
                            
                            
        				placeholder="Enter Name ..."
        				valueStateText="Name must not be empty. Maximum 10 characters." />

				<Label text="Email" labelFor="email" design="Bold" />
		<Input id="email" required="true" 
        	                type="Text"
        				placeholder="Enter Email ..."
        				valueStateText="Email must not be empty."/>

        

				<Label text="Mobile" labelFor="mobile" design="Bold" />
		<Input id="mobile" required="true"
        	                type="Number"
        				placeholder="Enter Mobile Number ..."
        				valueStateText="Mobile No. must not be empty." />

         <Label text="Country Code" labelFor="countrycode" design="Bold" />
		<Input id="countrycode" required="true"
        	                type="Text"
        				placeholder="Enter Country Code ..."
        				valueStateText="CountryCode must not be empty."/>

            <Label text="Role" labelFor="role" design="Bold" />
        	<ComboBox
            id="role"
            required="true"
            placeholder="Select Role ..."
        				valueStateText="Role must not be empty."
				items="{path: 'data>/MasterAdminRoleSet'}">
				<core:Item key="{data>Id}" text="{data>Description}" />
			</ComboBox>
		
			</f:content>
		</f:SimpleForm>
	</VBox>
	
    <footer>
			<OverflowToolbar>
            <Button
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
				<ToolbarSpacer/>
                <Button text="Clear" press="onClearPress" visible="{= ${message>/}.length > 0 }"/>
				<Button text="Add"
                type="Emphasized"
						press="add"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">

					
				</Button>
                  <Button text="Cancel"
                type="Emphasized"
						press="onCancelPress"
						>
					
				</Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
