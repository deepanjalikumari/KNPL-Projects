<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.Home" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                    <IconTabBar
		id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Users" key="users">
				<Table inset="false" id="tableUsers" items="{path: 'data>/AdminSet',
                filters: {path: 'IsArchived', operator: 'EQ', value1: false}}"
                growing="true" 
                growingThreshold="20">
                            <headerToolbar>
                            
                                <Toolbar class="tblTlbrAd">
                                    <ToolbarSpacer></ToolbarSpacer>
                                    <SearchField id ="searchField" search=".onFilterUsers" width="20%" />
                                    
                                    <Button text="{i18n>GenericRefresh}" type="Transparent" icon="sap-icon://refresh" press="onRefresh"/>
                                    <Button text="{i18n>GenericAdd}" type="Transparent" icon="sap-icon://add" press="onPressAdd"/>
                                </Toolbar>
                            </headerToolbar>
                            <columns>

                                
                                <Column width="20%">
                                    <Text text="{i18n>userName}"/>
                                </Column>
                                <Column width="20%" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>mobileNo}"/>
                                </Column>
                                <Column width="20%">
                                    <Text text="{i18n>email}"/>
                                </Column>
                                <Column width="20%" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>country}"/>
                                </Column>

                                <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericEdit}"/>
                                </Column>
                                <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericRemove}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>


                                        
                                        <Text text="{data>Name}"/>
                                        <Text text="{data>Mobile}"/>
                                        <Text text="{data>Email}"/>
                                        <Text text="{data>CountryCode}"/>

                                        <Button icon="sap-icon://edit" visible="{oMdlCtrl>/IsAdmin}" type="Transparent" press="onPressEdit" tooltip="Edit"></Button>
                                        <Button icon="sap-icon://delete" visible="{oMdlCtrl>/IsAdmin}" type="Transparent" tooltip="remove" press="onPressRemove"></Button>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>

			</IconTabFilter>
			<IconTabFilter text="Roles" key="roles">
				<Table inset="false" id="tableRoles" items="{path: 'data>/MasterAdminRoleSet',
                filters: {path: 'IsArchived', operator: 'EQ', value1: false}}"
                growing="true" 
                growingThreshold="20">
                            <headerToolbar>
                                <Toolbar class="tblTlbrAd">

                                    <ToolbarSpacer></ToolbarSpacer>
                                    <SearchField id ="searchFieldRole" search=".onFilterRoles" width="20%" />
                                    <Button text="{i18n>GenericRefresh}" type="Transparent" icon="sap-icon://refresh" press="onRefresh"/>
                                    <Button text="{i18n>GenericAdd}" type="Transparent" icon="sap-icon://add" press="onPressAddRole"/>
                                </Toolbar>
                            </headerToolbar>
                            <columns>

                                
                                <Column width="20%">
                                    <Text text="{i18n>role}"/>
                                </Column>
                                <Column width="20%" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>roleDesc}"/>
                                </Column>
                                

                                <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericEdit}"/>
                                </Column>
                                <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericRemove}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>


                                        
                                        <Text text="{data>Role}"/>
                                        <Text text="{data>Description}"/>
                                        

                                        <Button icon="sap-icon://edit" visible="{oMdlCtrl>/IsAdmin}" type="Transparent" press="onPressEditRole" tooltip="Edit"></Button>
                                        <Button icon="sap-icon://delete" visible="{oMdlCtrl>/IsAdmin}" type="Transparent" tooltip="remove" press="onPressRemove"></Button>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
			</IconTabFilter>
			<IconTabFilter text="Company Settings" key="settings">
                    <Table inset="false" id="tableCompanySettings" items="{path: 'tableData>/CompanySettings'}"
                growing="true" 
                growingThreshold="20">
                            <headerToolbar>
                                <Toolbar class="tblTlbrAd">

                                    <ToolbarSpacer></ToolbarSpacer>
            
                                    <Button text="{i18n>GenericRefresh}" type="Transparent" icon="sap-icon://refresh" press="onRefresh"/>
                                    <Button text="{i18n>GenericAdd}" type="Transparent" icon="sap-icon://add" press="onPressAddCompanySettings"/>
                                </Toolbar>
                            </headerToolbar>
                            <columns>

                                
                                <Column width="20%">
                                    <Text text="{i18n>aboutUs}"/>
                                </Column>
                                <Column width="20%" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>disclaimer}"/>
                                </Column>
                                <Column width="20%" minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>callcenter}"/>
                                </Column>
                                

                                <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericEdit}"/>
                                </Column>
                                <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericRemove}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>


                                        
                                        <Text text="{tableData>AboutUs}"/>
                                        <Text text="{tableData>Disclaimer}"/>
                                        <Text text="{tableData>CallCenterNo}"/>
                                        

                                        <Button icon="sap-icon://edit" visible="{oMdlCtrl>/IsAdmin}" type="Transparent" press="onPressEditCompanySettings" tooltip="Edit"></Button>
                                        <Button icon="sap-icon://delete" visible="{oMdlCtrl>/IsAdmin}" type="Transparent" tooltip="remove" press="onPressRemove"></Button>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
			</IconTabFilter>
			<!-- <IconTabFilter text="Sharing Rules" key="rules">
				<Text text="Sharing Rules content goes here ..." />
			</IconTabFilter> -->
		    </items>
	    </IconTabBar>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
