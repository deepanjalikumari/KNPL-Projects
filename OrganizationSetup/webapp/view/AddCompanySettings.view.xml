<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.CompanySettings" 
    xmlns:re="sap/ui/richtexteditor/RichTextEditor"
    class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page
		showNavButton="true"
		navButtonPress=".onNavBack">
        <VBox class="sapUiSmallMargin">
        <f:SimpleForm id="addCompanySettingsForm"
			editable="true"
			layout="ColumnLayout"
			title="Add Company Settings"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			><f:content>
				 <Label text="Disclaimer"  design="Bold"/>
                <Input id="disclaimer" required="true" />
				

                <Label text="AboutUs"  design="Bold"/>
                <Input id="about" required="true"  />
				

                <Label text="CallCenter Number" labelFor="callcenter" design="Bold" />
		        <Input id="callcenter" required="true"  />
		
			</f:content>
		</f:SimpleForm>
	</VBox>

	
    <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Add"
						press="add"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					
				</Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
