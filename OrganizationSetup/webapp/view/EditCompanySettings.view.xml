<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.CompanySettings" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page

		showNavButton="true"
		navButtonPress=".onNavBack">
         <VBox class="sapUiSmallMargin">
        <f:SimpleForm id="editCompanySettingsForm"
			editable="true"
			layout="ColumnLayout"
			title="Edit Company Settings"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			><f:content>
				<Label text="Disclaimer"  design="Bold"/>
                <Input id="disclaimer" required="true"  value="{tableData>Disclaimer}"/>
				

                <Label text="AboutUs"  design="Bold"/>
                <Input id="about" required="true" value="{tableData>AboutUs}" />
				

                <Label text="CallCenter Number" labelFor="callcenter" design="Bold" />
		        <Input id="callcenter" required="true"  value="{tableData>CallCenterNo}"/>
		
			</f:content>
		</f:SimpleForm>
	</VBox>

	<!-- <l:VerticalLayout class="sapUiContentPadding" width="100%">
		        <Label text="Disclaimer"  design="Bold"/>
