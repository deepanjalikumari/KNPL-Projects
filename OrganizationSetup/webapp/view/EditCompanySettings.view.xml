<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.CompanySettings" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page id="editCompanySettings">
         <VBox class="sapUiSmallMargin">
        <f:SimpleForm id="editCompanySettingsForm"
			editable="true"
			layout="ColumnLayout"
			title="Edit Company Settings"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			><f:content>
				
				

                <Label text="About Us"  design="Bold"/>
                <Input id="about" required="true" 
                type="Text"
        				placeholder="Enter About Us ..."
        				valueStateText="About Us must not be empty."
                        value="{ 
                                  path : 'data>AboutUs', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1
                                      
                                  }
                              }" />

                <Label text="Disclaimer"  design="Bold"/>
                <Input id="disclaimer" required="true"  type="Text"
        				placeholder="Enter Disclaimer ..."
        				valueStateText="Disclaimer must not be empty."
                         value="{ 
                                  path : 'data>Disclaimer', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1
                                      
                                  }
                              }"/>
				

                <Label text="Call Center Number" labelFor="callcenter" design="Bold" />
		        <Input id="callcenter" required="true"  type="Text"
        				placeholder="Enter Call Center Number ..."
        				valueStateText="Call Center Number must not be empty."
                        value="{ 
                                  path : 'data>CallCenterHelpline', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1
                                      
                                  }
                              }"/>
		
			</f:content>
		</f:SimpleForm>
	</VBox>

	
    <footer>
			<Toolbar>
            <Button
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
				<ToolbarSpacer/>
                <Button text="Clear" press="onClearPress" visible="{= ${message>/}.length > 0 }"/>
				<Button text="Update"
                type="Emphasized"
						press="update"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					
				</Button>
                  <Button text="Cancel"
                type="Emphasized"
						press="onCancelPress"
						>
					
				</Button>
			</Toolbar>
		</footer>
    </Page>
</mvc:View>
