                <Input id="about" required="true" value="{tableData>AboutUs}" />
				

                <Label text="CallCenter Number" labelFor="callcenter" design="Bold" />
		        <Input id="callcenter" required="true" width="20%" value="{tableData>CallCenterNo}"/>

        

        
               
                
                 
	</l:VerticalLayout> -->
    <footer>
			<Toolbar>
            <Button
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
				<ToolbarSpacer/>
                <Button text="Clear" press="onClearPress" visible="{= ${message>/}.length > 0 }"/>
				<Button text="Update"
						press="update"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					
				</Button>
			</Toolbar>
		</footer>
    </Page>
</mvc:View>
