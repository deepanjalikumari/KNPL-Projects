<mvc:View controllerName="com.knpl.pragati.OrganizationSetup.controller.Role" class="sapUiSizeCompact" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout"
xmlns:core="sap.ui.core"
xmlns:f="sap.ui.layout.form">
<Page
		
		showNavButton="true"
		navButtonPress=".onNavBack">
        <VBox class="sapUiSmallMargin">
        <f:SimpleForm id="addRoleForm"
			editable="true"
			layout="ColumnLayout"
			title="Add Role"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			><f:content>
				<Label text="Role" labelFor="role" design="Bold" />
		<Input id="role" required="true" />

		<Label text="Description" labelFor="description" design="Bold" />
		<Input id="description" required="true" />
		
			</f:content>
		</f:SimpleForm>
	</VBox>

	
    <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Add"
						press="add"
						ariaDescribedBy="defaultButtonDescription genericButtonDescription">
					
				</Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
