<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog binding="{oModelView>/QRCodeData}" title="{i18n>TokenCodeDetails}" titleAlignment="Center" >
        <content>
            <form:SimpleForm 	columnsL="2" layout="ResponsiveGridLayout"	columnsM="2"	singleContainerFullSize="false"  >
                <Label text="Category" />
                <Text text="{oModelView>ProductCategory}" />
                <Label text="Classification" />
                <Text text="{oModelView>ProductClassification}" />
                <Label text="Product Name" />
                <Text text="{oModelView>ProductName}" />
                <Label text="Points" />
                <Text text="{oModelView>RewardPoints}" />
                <Label text="" />
                <Text text= "{oModelView>Message}" />
            </form:SimpleForm>
        </content>
        <endButton>
            <Button text="Close" press="onTokenDlgClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>