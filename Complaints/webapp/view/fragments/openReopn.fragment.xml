<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">
<!-- <Dialog   binding="{oModelControl>/QRCodeData}" class="sapUiContentPadding" title="{i18n>TokenCodeDetails}" titleAlignment="Center" > -->
        <Dialog  contentHeight="50%"  class="sapUiContentPadding" title="{i18n>ReopenReason}" >
        <content>
            <form:SimpleForm  layout="ResponsiveGridLayout"	
           	singleContainerFullSize="false"  >
                	<ComboBox id="idcombo" selectedKey="{oModelControl>/ComplainReopenReasonId}"
				items="{path: 'oModelControl>/ReopenReasonList'}">
				<core:Item key="{oModelControl>Id}" text="{oModelControl>Reason}" />
			</ComboBox>
            </form:SimpleForm>
        </content>
<beginButton>
  <Button text="Close" press="onReopenClose" />
</beginButton>
        <endButton>
            <Button text="Save" press="onReopenSave" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>