<core:FragmentDefinition xmlns:unified="sap.ui.unified" xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
        <f:SimpleForm class="addForm" id="FormObjectData" editable="true" layout="ResponsiveGridLayout" title="{oModelControl>/Pagetitle}" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>PainterDetails}" />
                <Label text="{i18n>PrimaryMobileNo}" />
                <Input required="true" valueHelpOnly="true" showValueHelp="true" valueHelpRequest="onValueHelpRequest" value="{path:'oModelControl>/Mobile', type : 'sap.ui.model.type.String', constraints:{ minLength:1 } }" />
                <Label text="{i18n>PainterName}" />
                <Text  text="{oModelControl>/Name}" />
                <Label text="{i18n>MembershipId}" />
                <Text text="{oModelControl>/MembershipCard}" />
                <!-- Zone Division Depot Info -->
                <Label text="{i18n>Zone}" />
                <Text text="{oModelControl>/ZoneId}" />
                <Label text="{i18n>Division}" />
                <Text text="{oModelControl>/DivisionId}" />
                <Label text="{i18n>Depot}" />
                <Text text="{oModelControl>/Depot}" />

                <core:Title text="{i18n>PortfolioDetails}" />
                <Label text="{i18n>Category}" required="true"/>
                <ComboBox required="true" items="{path:'/PortfolioCategorySet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ], select: {Id, category} }" selectedKey="{path:'oModelView>/PortfolioCategoryId',type  : 'sap.ui.model.type.String', constraints:{minLength:1} }">
                    <items>
                        <core:Item text="{category}" key="{Id}" />
                    </items>
                </ComboBox>

                <Label text="{i18n>Images}" required="true"/>
                <VBox>
                    <items>
                        <unified:FileUploader  change="onBannerImageFileChange" id="idImageUploader" width="100%" tooltip="{i18n>fileUploaderTrainingtip}" typeMissmatch="handleTypeMissmatch" fileType="png,jpg,jpeg" maximumFileSize="2.1" fileSizeExceed="onFileSizeExceed" useMultipart="false" sendXHR="true" fileAllowed="onUpload"/>
                          <Text text="{i18n>FileUploadMessage}"/>
                    </items>
                </VBox>

            </f:content>
        </f:SimpleForm>
</core:FragmentDefinition>