<mvc:View controllerName="com.knpl.pragati.ContactPainter.controller.AddEditPainter" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:uxap="sap.uxap" height="100%">
   <Page title="{i18n>appTitle}" titleAlignment="Center" class="sapUiContentPadding" showNavButton="true" showHeader="true" navButtonPress="navPressBack">
        <content>
            <IconTabBar id="idIconTabBarFiori2" select="onSectIctb" upperCase="false" expandable="true" expanded="true" class="ictbr sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter key="0" text="{oModelView>/sIctbTitle} Painter"></IconTabFilter>
                </items>
            </IconTabBar>
            <VBox id="oVbxSmtTbl">
               
            </VBox>

        </content>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://alert" text="{= ${message>/}.length }" visible="{= ${message>/}.length > 0 }" type="Emphasized" press="onMessagePopoverPress"/>
                <Button text="Clear" press="onClearPress" visible="{= ${message>/}.length > 0 }"/>
                <ToolbarSpacer/>
                <Button width="9%" text="{= ${oModelView>/mode} === 'add' ? 'Add' : 'Save' }" type="Accept" press="onPressSave"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>