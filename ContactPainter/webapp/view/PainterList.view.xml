<mvc:View height="100%" xmlns:smartTable="sap.ui.comp.smarttable" controllerName="com.knpl.pragati.ContactPainter.controller.PainterList" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <f:DynamicPage id="dynamicPageId" headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <vm:VariantManagement standardItemText="{i18n>appDescription}"></vm:VariantManagement>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar showRestoreButton="false" id="filterbar" reset="onResetFilterBar" search="onFilter" useToolbar="false" showRestoreOnFB="true">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Name" visibleInFilterBar="true">
                                <fb:control>
                                    <SearchField id="searchField" width="50%" placeholder="Search for..." value="{oModelView>/searchBar}" enableSuggestions="true" search=".onSearch" suggestionItems="{
                                            				path: '/PainterSet'
                                            			}">
                                        <SuggestionItem text="{Name}"/>
                                    </SearchField>
                                    <!-- <Input id="idNameInput" value="{oModelView>/filterBar/Name}" submit="onFilter" placeholder="Name" showSuggestion="true" showValueHelp="false" suggestionItems="{/PainterSet}">
                                                                            <suggestionItems>
                                                                                <core:Item text="{Name}"/>
                                                                            </suggestionItems>
                                                                        </Input> -->
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="AgeGroup" label="{i18n>AgeGroup}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox id="cmbxAgeGrp" items="{path:'/PainterSet', parameters:{expand:'AgeGroup' }}" selectedKey="{oModelView>/filterBar/AgeGroup}">
                                        <core:Item text="{AgeGroup/AgeGroup}" key="{AgeGroup/AgeGroup}"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="RegistrationStatus" label="{i18n>RegistrationDate}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox id="cmbxRegDate" items="{/PainterSet}" selectedKey="{oModelView>/filterBar/CreatedAt}">
                                        <core:Item text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy'} }" key="{CreatedAt}"/>

                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Status" label="{i18n>Status}" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <ComboBox id="cmbx" selectedKey="{oModelView>/filterBar/RegistrationStatus}">
                                        <core:Item text="Pending" key="PENDING"/>
                                        <core:Item text="Registered" key="REGISTERED"/>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="idPainterTable" width="auto" items="{path: '/PainterSet',sorter:{path:'CreatedAt',descending:true}, parameters:{expand:'AgeGroup' }}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
                <headerToolbar>
                    <Toolbar>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://add" text="{i18n>AddPainter}" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                        <Button icon="sap-icon://sort" type="Transparent" press="handleSortButtonPressed"></Button>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>Name}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>PainterId}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>PrimaryMobile}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>AgeGroup}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>PrimaryDealer}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>RegistrationDate}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>Status}"/>
                    </Column>
                    <Column width="10%">
                        <Text text="{i18n>Actions}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem press="onListItemPress" type="Navigation">
                        <cells>
                            <ObjectIdentifier title="{Name}" titleActive="true"/>
                            <Text text="{Id}"/>
                            <Text text="{Mobile}"/>
                            <Text text="{AgeGroup/AgeGroup}"/>
                            <Text text="{DealerId}"/>
                            <Text text="{path:'CreatedAt',type:'sap.ui.model.type.Date',formatOptions:{pattern:'dd/MM/yyyy'} }"/>
                            <ObjectStatus text="{RegistrationStatus}" state="{= ${RegistrationStatus} === 'PENDING' ? 'None' : 'Success' }"/>

                            <HBox>
                                <Button icon="sap-icon://edit" type="Transparent" press="onPressFDLSave"></Button>
                                <Button icon="sap-icon://delete" type="Transparent" press="onDeactivate"></Button>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
