<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
    <smartTable:SmartTable id="smrtCallback" editable="false" beforeRebindTable="onBeforeRebindCallbackRequest" entitySet="PainterRequestSet" tableType="ResponsiveTable"  showRowCount="false" useExportToExcel="false" useVariantManagement="false" useTablePersonalisation="true" demandPopin="true" enableAutoBinding="true" placeToolbarInTable="true" persistencyKey="PendingSmartTableKey" ignoredFields="AdminDetails/Name" ignoreFromPersonalisation="RequestTypeId,IsSelected,CreatedBy,UpdatedAt,UpdatedBy,IsArchived">
        <Table growing="true" growingThreshold="15">
            <columns>
              
                <Column >
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "CreatedAt", "leadingProperty": "CreatedAt", "columnIndex": 4}'/>
                    </customData>
                    <Text text="{i18n>CreatedDate}"/>
                </Column>
                <Column hAlign="Center">
                    <customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "Status", "leadingProperty": "Status", "columnIndex": 9}'/>
                    </customData>
                    <Text text="{i18n>Status}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <!-- <Text text="{Id}"/> -->
                        <Text text="{path: 'CreatedAt', type:'sap.ui.model.type.DateTime',formatOptions:{pattern:'dd/MM/yyyy, hh:mm:ss aa'}}"/>
                         <Text text="{path: 'Status', formatter:'.formatter.CallbackReqTblStatus'}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </smartTable:SmartTable>

</core:FragmentDefinition>
