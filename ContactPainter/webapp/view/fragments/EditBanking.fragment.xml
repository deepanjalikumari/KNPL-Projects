<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox width="100%">
        <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>BankingDetails}"/>
                <Label text="{i18n>AccountHolderName}"/>
                <Input required="true" value="{path:'oModelView>/PainterBankDetails/AccountHolderName',type : 'sap.ui.model.type.String', constraints : {minLength:1, search:'^[a-zA-Z]{1}[wW]*'} }"/>
                <Label text="{i18n>AccountType}"/>
                <ComboBox items="{/MasterBankAccountTypeSet}" required="true" selectedKey="{path:'oModelView>/PainterBankDetails/AccountType', type : 'sap.ui.model.type.String', constraints:{ minLength:1 }  }">
                    <items>
                        <core:Item text="{AccountType}" key="{AccountType}"/>
                    </items>
                </ComboBox>
                <Label text="{i18n>BankName}"/>
                <ComboBox required="true" items="{/MasterBankNameSet}" selectedKey="{path:'oModelView>/PainterBankDetails/BankName', type : 'sap.ui.model.type.String', constraints:{ minLength:1 }  }">
                    <items>
                        <core:Item text="{BankName}" key="{BankName}"></core:Item>
                    </items>
                </ComboBox>
                <Label text="{i18n>AccountNumber}"/>
                <Input required="true" type="Number" value="{path:'oModelView>/PainterBankDetails/AccountNumber',type : 'sap.ui.model.type.String', constraints:{ minLength:10,maxLength:20, search: '^[+]*[(]{0,1}[0-9]{1,4}[)]{0,1}[-\\s\\./0-9]*$' } }"/>
                <Label text="{i18n>IFSCCode}"/>
                <Input required="true" value="{path:'oModelView>/PainterBankDetails/IfscCode',type : 'sap.ui.model.type.String', constraints : {minLength:1, search:'^[a-zA-Z]{1}[wW]*'} }"/>
                <core:Title text="{i18n>KYCDetails}"/>
                <RadioButtonGroup selectedIndex="0" columns="3" width="100%">
                    <buttons>
                        <RadioButton id="RB1-1" text="{i18n>AadhaarCard}"/>
                        <RadioButton id="RB1-2" text="{i18n>DrivingLicence}"/>
                        <RadioButton id="RB1-3" text="{i18n>VoterId}"/>
                    </buttons>
                </RadioButtonGroup>
                <Label text="{i18n>AadhaarCardNumber}"/>
                <Input required="false"/>
                <Label text=""/>
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>
