<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox width="100%">
        <Table width="auto" items="{path: '/PainterReferralHistorySet'}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
            <headerToolbar>
                <Toolbar>
                    <ToolbarSpacer/>
                    <SearchField width="20%"></SearchField>
                   <Button icon="sap-icon://sort" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                        <Button icon="sap-icon://filter" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                        <Button icon="sap-icon://action-settings" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="{i18n>Name}"/>
                </Column>
                <Column>
                    <Text text="{i18n>ReferralMobileNumber}"/>
                </Column>
                <Column>
                    <Text text="{i18n>EmailId}"/>
                </Column>
                <Column>
                    <Text text="{i18n>DateAndTime}"/>
                </Column>
                <Column>
                    <Text text="{i18n>OnBoardingStatus}"/>
                </Column>
                <Column>
                    <Text text="{i18n>PointsReceived}"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem press="onListItemPress">
                    <cells>
                        <Text text="{ReferralName}"/>
                        <Text text="{ReferralMobile}"/>
                        <Text text="{ReferralEmail}"/>
                         <Text text="{CreatedAt}"/>
                          <Text text="{ReferralEmail}"/>
                          <Text text="{RewardPoints}"/>
                       
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

    </VBox>
</core:FragmentDefinition>
