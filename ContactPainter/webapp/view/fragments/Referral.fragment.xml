<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox width="100%">
        <Table width="auto" items="{path: 'oModelView>/FamilyDetails'}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
            <headerToolbar>
                <Toolbar>
                  
                   
                    <ToolbarSpacer/>
                   <Button icon="sap-icon://sort" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                        <Button icon="sap-icon://filter" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                        <Button icon="sap-icon://action-settings" type="Transparent" press=".onPressAddPainter" tooltip="{i18n>AddPainter}"></Button>
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="Name"/>
                </Column>
                <Column>
                    <Text text="Referral Mobile Number"/>
                </Column>
                <Column>
                    <Text text="Email Id"/>
                </Column>
                <Column>
                    <Text text="Date and Time"/>
                </Column>
                <Column>
                    <Text text="Onboarding Status"/>
                </Column>
                <Column>
                    <Text text="Points Received"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem press="onListItemPress">
                    <cells>
                        <Input value="{oModelView>RelType}"/>
                        <Input value="{oModelView>Name}"/>
                        <Input value="{oModelView>ContactNumber}"/>
                        <Button icon="sap-icon://edit" type="Transparent" press="onPressEditRel"></Button>
                        <Button icon="sap-icon://delete" type="Transparent" press="onPressRemoveRel"></Button>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

    </VBox>
</core:FragmentDefinition>
