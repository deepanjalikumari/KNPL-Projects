<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" title="{i18n>OfferRedeemDialogTitle}" titleAlignment="Center">
        <content>
            <VBox width="100%">
                <RadioButtonGroup id="GroupA" width="100%" selectedIndex="{oModelControl2>/OfferRedeemDlg/RbtnRedeemType}">
                    <RadioButton text="{i18n>RedeemPoints}- {RewardPoints}" width="100%" visible="{= ${RewardPoints}!==null }" />
                    <RadioButton text="{i18n>RedeemCash}- Rs. {RewardCash}" width="100%" visible="{= ${RewardCash}!==null }" />
                    <RadioButton text="{i18n>RedeemGift}-  {RewardGift/RewardGift}" width="100%" visible="{= ${RewardGiftId}!==null }" />
                </RadioButtonGroup>

            </VBox>

            <!-- <f:SimpleForm layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="600INR Direct Bank Transfer"></Label>
                    
                </f:content>
            </f:SimpleForm> -->



        </content>
        <buttons>
            <Button text="Close" press="onDialogCloseRedeme" />
            <Button press="onConfirmRedeem" type="Emphasized" text="{i18n>Save}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>