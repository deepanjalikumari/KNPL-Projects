<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" title="{i18n>OfferRedeemDialogTitle}" titleAlignment="Center">
        <content>
            <VBox  width="100%" >
                <RadioButtonGroup id="GroupA" width="100%" selectedIndex="{oModelControl>/RbtnRedType}">
                    <RadioButton text="Option 1" width="100%" />
                    <RadioButton text="Option 2"  width="100%" />
                    <RadioButton text="Option 3"  width="100%" />

                </RadioButtonGroup>

            </VBox>

            <!-- <f:SimpleForm layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="600INR Direct Bank Transfer"></Label>
                    
                </f:content>
            </f:SimpleForm> -->



        </content>
        <buttons>
            <Button text="Close" press="onDialogCloseRedeme" />
            <Button press="onConfirmRedeem" type="Emphasized" text="{i18n>Save}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>