<core:FragmentDefinition     xmlns="sap.m"    xmlns:smartTable="sap.ui.comp.smarttable"   xmlns:core="sap.ui.core">
    <smartTable:SmartTable
                            id="smrtTraining"
                            editable="false"                   
                            entitySet="PainterTrainingSet"
                            tableType="ResponsiveTable"
                            showRowCount="true"
                            useExportToExcel="false"
                            useVariantManagement="false"
                            useTablePersonalisation="true"
                            demandPopin="true"
                            initiallyVisibleFields="Title"
                            enableAutoBinding="true"
                            placeToolbarInTable="true"
                            persistencyKey="TrainingSmartTableKey"
                            ignoreFromPersonalisation="Id,Address,CityId,CreatedBy,DepotId,Description,DivisionId,Location,StateId,Status,TrainingCode,Url,ZoneId,PainterType,PainterArcheId,TrainingTypeId,IsSelected,UpdatedAt,UpdatedBy,IsArchived">
                                               <Table>
                                <columns>
                                    <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "CreatedAt", "type":"date", "leadingProperty": "CreatedAt", "columnIndex": 5 ,"sortProperty": "CreatedAt","filterProperty": "CreatedAt"}'/>
                                        </customData>
                                          <Text text="{i18n>DateAndTime}"/>
                                    </Column>
                                     <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "AttendedAt", "type":"date", "leadingProperty": "AttendedAt", "columnIndex": 6 ,"sortProperty": "AttendedAt","filterProperty": "AttendedAt"}'/>
                                        </customData>
                                          <Text text="{i18n>trainingAttendance}"/>
                                    </Column>
                                    
                                    <Column hAlign="Begin">
                                        <customData>
                                            <core:CustomData key="p13nData" value='\{"columnKey": "Id", "leadingProperty": "Id", "columnIndex": 7 ,"sortProperty": "Id","filterProperty": "Id"}'/>
                                        </customData>
                                          <Text text="{i18n>trainingQuestionaaire}"/>
                                    </Column>
                                    
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                              <Text text="{path:'CreatedAt',type:'sap.ui.model.odata.type.DateTime',formatOptions:{pattern:'dd/MM/YYYY h:mm a'}}"/>
                                               <Text text="{path:'AttendedAt',type:'sap.ui.model.odata.type.DateTime',formatOptions:{pattern:'dd/MM/YYYY h:mm a'}}"/>
                                              <Button text="{i18n>ViewQuestion}" press="onViewQuestionaire" />
                                               
                                         </cells>      
                                    </ColumnListItem>
                                </items> 
                            </Table>
                        </smartTable:SmartTable>
</core:FragmentDefinition>



