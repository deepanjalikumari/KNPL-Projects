<mvc:View controllerName="com.knpl.pragati.LoyaltyManagement.controller.DetailPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <f:DynamicPage headerExpanded="true" class="sapUiNoContentPadding">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Accrual Requests"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link text="Loyalty Management"/>
                        <Link text="Accrual Details" />
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:expandedContent>
                    <Label text="{Id}"/>
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="{Id}"/>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <ObjectAttribute title="Type of Accrual"/>
                        <ObjectStatus text="{PointType}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                        <ObjectAttribute title="Status"/>
                        <ObjectStatus text="{PainterTokenScanHistory/ScanStatus}" state="Warning" />
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox class="formContainer sapUiSmallMargin">
                <form:Form id="idDetailForm"
                    editable="false">
                    <form:layout>
                        <form:ResponsiveGridLayout
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="12"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false" />
                    </form:layout>
                    <form:formContainers>
                        <form:FormContainer >
                        
                            <form:formElements>
                                <form:FormElement label="Type of Request">
                                    <form:fields>
                                        <Text class="sapUiSmallMarginBottom" text="{PointTransactionType}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Type of Accrual">
                                    <form:fields>
                                        <Text  class="sapUiSmallMarginBottom"  text="{PointType}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Request ID">
                                    <form:fields>
                                        <Text class="sapUiSmallMarginBottom" text="{Id}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Requested Through">
                                    <form:fields>
                                        <Text class="sapUiSmallMarginBottom" text="Mobile App" />
                                    </form:fields>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                        <form:FormContainer title="">
                            <form:formElements>
                                <form:FormElement label="Painter Name">
                                    <form:fields>
                                        <Text class="sapUiSmallMarginBottom" text="{Painter/Name}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Point">
                                    <form:fields>
                                        <Text class="sapUiSmallMarginBottom" text="{RewardPoints}" />
                                    </form:fields>
                                </form:FormElement>
                            
                                <form:FormElement label="Date &amp; Time">
                                    <form:fields>
                                        <Text class="sapUiSmallMarginBottom" text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}" />
                                    </form:fields>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
