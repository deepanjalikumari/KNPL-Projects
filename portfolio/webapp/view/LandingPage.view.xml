        <f:content>
		<form:SimpleForm

			editable="true"
			layout="ResponsiveGridLayout"
			title="Portfolio"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="3"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >
			<form:content>
				<core:Title text="" />
				<Label text="Painter" />
				<Select
					forceSelection="false"
					selectedKey="{/PainterId}"
					items="{
						path: '/PainterSet',
                        filters: {path: 'IsArchived', operator: 'EQ', value1: false},
						sorter: { path: 'Name' }
					}">
					<core:Item key="{Id}" text="{Name}" />
				</Select>
				<core:Title text="" />
				<Label text="Complaint Type" />
				<Select
					forceSelection="false"
                    change="onComplaintTypeChange"
					items="{
						path: '/MasterComplaintTypeSet',
						sorter: { path: 'ComplaintType' }
					}">
					<core:Item key="{Id}" text="{ComplaintType}" />
				</Select>
                <Label text="Sub Complaint" />
				<Select
                id="IdComplaintSubtype"
					forceSelection="false"
					items="{
						path: '/MasterComplaintTypeSet'
					}">
					<core:Item key="{Id}" text="{ComplaintSubtype/ComplaintSubtype}" />
				</Select>
			</form:content>
		</form:SimpleForm>
        </f:content>
        <f:footer>
         
            <OverflowToolbar>
              <ToolbarSpacer/>
              <Button press="onNavToHome" type="Ghost"  text="{i18n>Cancel}"  />
             
              <!-- <Button press=".onApproval(true)" visible="{= ${oModelDisplay>/mode}==='Display'}" text="{i18n>Approve}"  type="Accept"  /> -->
             <Button press="onPressSave" text="{i18n>Generate}" type="Emphasized" />
          
        
