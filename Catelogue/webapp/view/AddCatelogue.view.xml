<mvc:View
	controllerName="com.knpl.pragati.Catelogue.controller.AddCatelogue"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    class="sapUiSizeCompact">
    	  <!-- <Breadcrumbs id="breadcrumbsId" currentLocationText="Catelogue Details">
                            <Link text="Catelogues" press="handleAllCatelogueLinkPress"/>
                        </Breadcrumbs> -->
    <Page
		id="idPage"
		class= "sapUiResponsivePadding--header">
		

		<content>
			
			<form:SimpleForm
				minWidth="1024"
				maxContainerCols="2"
                title="Add Catelogue Details" 
                
				class="sapUiForceWidthAuto sapUiResponsiveMargin" >
                
				
                <VBox >
                <Title  text="Catelogue Details"  />
                <VBox class="sapUiMediumMargin">
                <Label text="Title:" />
		<Input id="idTitle" placeholder="Enter Title" width="40%"/>
                </VBox>
                <UploadCollection
			id="UploadCollectionImage"
			multiple="false"
			change="onChange"
            mode="MultiSelect"
            instantUpload="false"
            >
			<toolbar>
				<OverflowToolbar id="myId">
					<Title id="attachmentTitle" />
					<ToolbarSpacer />
					<Button
						id="downloadButton"
						text="Download"
						press="onDownloadImage"
						enabled="false"
						type="Transparent" />
					<Button
						id="versionButton"
						text="Upload a new version"
						press="onVersionImage"
						enabled="false"
						type="Transparent" />
					<UploadCollectionToolbarPlaceholder/>
				</OverflowToolbar>
			</toolbar>
			
		</UploadCollection>

         <UploadCollection
			id="UploadCollectionPdf"
			multiple="false"
			change="onChange"
            mode="MultiSelect"
            instantUpload="false">
			<toolbar>
				<OverflowToolbar id="myId1">
					<Title id="attachmentTitle1" />
					<ToolbarSpacer />
					<Button
						id="downloadButton1"
						text="Download"
						press="onDownloadPdf"
						enabled="false"
						type="Transparent" />
					<Button
						id="versionButton1"
						text="Upload a new version"
						press="onVersionPdf"
						enabled="false"
						type="Transparent" />
					<UploadCollectionToolbarPlaceholder/>
				</OverflowToolbar>
			</toolbar>
			
		</UploadCollection>
        
        
        
     
                </VBox>
              
			</form:SimpleForm>
			
		</content>
            <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
                

                <Button text="Cancel"
						press="onCancelPress"
						/>
					
				
				<Button text="Save"
                type="Emphasized"
				press="onStartUpload"
			    />
					
				
                  
			</OverflowToolbar>
		</footer>
	</Page>
    

	

</mvc:View>

