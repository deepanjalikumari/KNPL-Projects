                      </Table> -->

               
                                        
        
         <core:Fragment
             
                fragmentName="com.knpl.pragati.Catelogue.view.fragments.Tables" type="XML"> 
            </core:Fragment>
        
     
            </VBox>
                
               <!-- </form:content>
			</form:SimpleForm> -->
           
		</f:content>
        <f:footer>
            <OverflowToolbar>
				<ToolbarSpacer/>
                <Button text="{i18n>cancelBtnText}" type="Transparent" press="onPressCancel"/>
				<Button text="{=${ActionViewModel>/action} === 'add' ? ${i18n>saveBtnText} : ${i18n>updateBtnText}}" type="Emphasized" press="onPressSaveOrUpdate"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

	

</mvc:View>

