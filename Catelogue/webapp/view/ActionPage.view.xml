<mvc:View
	controllerName="com.knpl.pragati.Catelogue.controller.ActionPage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:u="sap.ui.unified"
    class="sapUiSizeCompact">
    <f:DynamicPage id="idActionPage" class="actionPage" showFooter="true" busy="{ActionViewModel>/busy}">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="Catalogue Details">
                        <Link press="onPressBreadcrumbLink" text="Catalogues" />
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
			
			<!-- <form:SimpleForm
			class="sapUiForceWidthAuto sapUiResponsiveMargin" >
                
