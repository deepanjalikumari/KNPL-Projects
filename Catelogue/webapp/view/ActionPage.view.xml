<mvc:View
	controllerName="com.knpl.pragati.Catelogue.controller.ActionPage"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:u="sap.ui.unified"
    class="sapUiSizeCompact">
    <f:DynamicPage id="idActionPage" class="actionPage" showFooter="true" busy="{ActionViewModel>/busy}">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="Catalogue Details">
                        <Link press="onPressBreadcrumbLink" text="Catelogue" />
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
			
			<form:SimpleForm
				minWidth="1024"
				maxContainerCols="2"
                title="Add Catalogue" 
                
				class="sapUiForceWidthAuto sapUiResponsiveMargin" >
                
				<form:content>
                <VBox >
                <Title  text="Catalogue Details"  />
                <HBox>
                <VBox class="sapUiMediumMargin" width="50%">
                            <HBox >
                                    <VBox class="sapUiMediumMarginBottom" width="80%">
                                            <Label text="Category:" required="true" />
                                                <Select
                                                id="idCategory"
                                                 width="100%"
                                                forceSelection="true"
                                                selectedKey="{ActionViewModel>/Category}"
                                                items="{
                                                    path: '/MasterProductCategorySet',
                                                    sorter: { path: 'Category' }
                                                }">
                                                <core:Item key="{Id}" text="{Category}" />
                                                 </Select>
                                        </VBox>
                                 </HBox>
                                <HBox >
                                    <VBox class="sapUiMediumMarginBottom" width="80%">
                                        <Label text="Classification:" required="true" />
                                            <Select
                                            id="idClassification"
                                            forceSelection="true"
                                            width="100%"
                                            selectedKey="{ActionViewModel>/Classification/}"
                                            items="{
                                                path: '/MasterProductClassificationSet',
                                                sorter: { path: 'Classification' }
                                            }">
                                            <core:Item key="{Id}" text="{Classification}" />
                                            </Select>
                                    </VBox>
                                </HBox>
                                 
                <VBox>
                                <Label text="Title:" required="true" />
                                <Input id="idTitle" value="{ActionViewModel>/Title}" placeholder="Enter Title" change="onChangeValue" width="80%"/>
                             
                             <VBox >  
                                    <HBox width="100%" class="sapUiMediumMarginTop">
                                            <VBox class="sapUiMediumMarginBottom" width="80%">
                                                <Label text="Range:" required="true" />
                                                    <Select
                                                    id="idRange"
                                                    forceSelection="true"
                                                    width="100%"
                                                    selectedKey="{ActionViewModel>/Range}"
                                                    items="{
                                                        path: '/MasterProductRangeSet',
                                                        sorter: { path: 'Id' }
                                                    }">
                                                    <core:Item key="{Id}" text="{Range}" />
                                                    </Select>
                                            </VBox>
                                        </HBox> 
                                </VBox>
                                <!-- <Button text="Add Compititor" press="onAddCompititor" /> -->
                            </VBox>
                </VBox>
                
         
         
          <HBox class="sapUiMediumMarginBegin">
          <VBox>
                 <VBox class="sapUiTinyMarginBottom">
                                            <Label text="Upload Thumbnail Image" class="sapUiTinyMargin" required="true"/>
                                            <u:FileUploader
                                                id="idFormToolImgUploader"
                                                name="formToolImgUploader"
                                                width="100%"
                                                tooltip="{i18n>fileUploaderTooltip}"
                                                change="onChangeFile"
                                                typeMissmatch="handleTypeMissmatch"
                                                fileType="png,jpg,jpeg"
                                                useMultipart="false"
                                                sendXHR="true"
                                                uploadComplete="handleUploadCompleteImage" />
                                            <Image id="idPreviewImage" width="400px" height="200px" />
                                            </VBox>
                                            <VBox class="sapUiTinyMarginBottom">
                                             <Label text="Upload Catalogue" class="sapUiTinyMargin" required="true"/>
                                        
                                       
                                            <u:FileUploader
                                                id="idFormToolPdfUploader"
                                                name="formToolPdfUploader"
                                                width="100%"
                                                tooltip="{i18n>fileUploaderTooltip}"
                                                change="onChangePdf"
                                                typeMissmatch="handleTypeMissmatch"
                                                fileType="pdf"
                                                useMultipart="false"
                                                sendXHR="true"
                                                uploadComplete="handleUploadCompletePdf" />
                
                                            <Button id="pdfBtn" icon="sap-icon://pdf-attachment" visible="false" press="openPdf" text="View" class="sapUiTinyMargin increaseFont"/>
                                            </VBox>
                                            
                </VBox>                  
          </HBox>
         
                 </HBox>                          
                                       
                <HBox width="100%" >
                    <Table id="idCompetitorDetils" width="auto" items="{path: 'ActionViewModel>/Competitor', templateShareable: false}" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>competitors}" />
                    <ToolbarSpacer />
                    <Button text="{i18n>Add}" type="Emphasized" press="onAddCompetitor" tooltip="{i18n>AddPainter}"></Button>
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="{i18n>selectCompititor}" />
                </Column>
                <Column>
                    <Text text="{i18n>competitorProduct}" />
                </Column>

                <Column width="10%">
                    <Text text="{i18n>Action}" />
                </Column>


            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <VBox>
                            <Select items="{path:'/MasterCompetitorCompanySet', templateShareable: true}" selectedKey="{path:'ActionViewModel>CompetitorCompanyId' }">
                                <items>
                                    <core:Item text="{CompanyName}" key="{Id}" />
                                </items>
                            </Select>
                           
                        </VBox>
                        <VBox>
                            <Input valueStateText="Kindly enter a valid name.Max 50 chars allowed" maxLength="50" width="70%" required="true" value="{path:'ActionViewModel>CompetitorProductName',type : 'sap.ui.model.type.String', constraints : {minLength:1,maxLngth:50, search:'^[a-zA-Z]{1}[wW]*'} }" />
                           
                        </VBox>
                        <HBox>
                            <!-- <Button  icon="sap-icon://edit" type="Transparent" press="onPressEditRel"></Button> -->
                    
                            <Button icon="sap-icon://delete" type="Transparent" press="onPressRemoveCompetitor"></Button>
                        </HBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

                </HBox>
                                        
        
        
        
     
                </VBox>
                
               </form:content>
			</form:SimpleForm>
		</f:content>
        <f:footer>
            <OverflowToolbar>
				<ToolbarSpacer/>
                <Button text="{i18n>cancelBtnText}" type="Transparent" press="onPressCancel"/>
				<Button text="{=${ActionViewModel>/action} === 'add' ? ${i18n>saveBtnText} : ${i18n>updateBtnText}}" type="Emphasized" press="onPressSaveOrUpdate"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

	

</mvc:View>

