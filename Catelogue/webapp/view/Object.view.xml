<mvc:View
	controllerName="com.knpl.pragati.Catelogue.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    class="sapUiSizeCompact">
 <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false" headerContentPinnable="true" toggleHeaderOnTitleClick="true" >
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:breadcrumbs>
                        <Breadcrumbs id="breadcrumbsId" currentLocationText="Dealer Details">
                            <Link text="Catelogues" press="handleAllDealerLinkPress"/>
                        </Breadcrumbs>
                    </uxap:breadcrumbs>

                   

                   
                </uxap:ObjectPageDynamicHeaderTitle>


            </uxap:headerTitle>

            
            

            <uxap:sections>
                <uxap:ObjectPageSection >
                    <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Catelogue Details" titleUppercase="false">
                    <Panel width="auto" class="sapUiResponsiveMargin">
                    <Label text="Title" design="Bold" required="true"/>
				<Input  
        	                type="Text"
                            width="50%"
                            value="{ 
                                  path : 'Name', 
                                  type : 'sap.ui.model.type.String', 
                                  constraints : { 
                                      minLength : 1,
                                       maxLength :25
                                      
                                  }
                              }"
                        placeholder="Enter Title ..."
        				valueStateText="Enter a valid Title. Maximum 25 characters." />
		<!-- <headerToolbar>
			<OverflowToolbar>
				<Title text="Add Catelogue Details"/>
			</OverflowToolbar>
		</headerToolbar> -->
		
	</Panel>
                    </uxap:ObjectPageSubSection>
                        <uxap:ObjectPageSubSection>
                        <VBox>
                         
                        <f:Card>
				<f:layoutData>
					<f:GridContainerItemLayoutData minRows="4" columns="4" />
				</f:layoutData>
				<!-- <f:header>
					<card:Header title="Uploaded"/>
				</f:header> -->
                
                
				<f:content>
					<Panel width="auto" class="sapUiResponsiveMargin" >
		<headerToolbar>
			<OverflowToolbar >
				<Title text="Uploaded"/>
                               
                               <ToolbarSpacer />
                               <Label  text="Thumbnail upload"/>
                                <SearchField  search=".onFilterUsers" width="20%" />
                                
                                    	
                               
			</OverflowToolbar>
		</headerToolbar>
		<content>
			
                    
                          <layout:HorizontalLayout class="sapUiContentPadding" > 
                           <FlexBox
                                    height="100px"
                                    alignItems="Center"
                                    justifyContent="Start">
                                    <f:Avatar class="sapUiSmallMarginEnd" displaySize="M"/>
                                    <ObjectAttribute title="{i18n>createdBy}" text="{Name}" active="true"/>
                                    <FlexBox  alignItems="Center"
                                    justifyContent="Start">
                                    <ObjectAttribute title="{i18n>creationDate}" text="{CreatedAt}" active="true"/>
                                        <ObjectAttribute title="{i18n>creationDate}" text="{CreatedAt}"/>
                                        <ObjectAttribute title="{i18n>uploadedOn}" text="{CreatedBy}"/></FlexBox>
                            
			                        </FlexBox>
                             </layout:HorizontalLayout>
                             	
                      
			
		</content>
	</Panel>
				</f:content>
			</f:Card>
            </VBox>
                            
                        </uxap:ObjectPageSubSection>
                        <uxap:ObjectPageSubSection>
                        <VBox>
                         
                        <f:Card>
				<f:layoutData>
					<f:GridContainerItemLayoutData minRows="4" columns="4" />
				</f:layoutData>
				<!-- <f:header>
					<card:Header title="Uploaded"/>
				</f:header> -->
                
                
				<f:content>
					<Panel width="auto" class="sapUiResponsiveMargin" >
		<headerToolbar>
			<OverflowToolbar >
				<Title text="Uploaded"/>
                               
                               <ToolbarSpacer />
                               <Label  text="Thumbnail upload"/>
                                <SearchField  search=".onFilterUsers" width="20%" />
                                
                                    	
                               
			</OverflowToolbar>
		</headerToolbar>
		<content>
			
                    
                          <layout:HorizontalLayout class="sapUiContentPadding" > 
                           <FlexBox
                                    height="100px"
                                    alignItems="Center"
                                    justifyContent="Start">
                                    <f:Avatar class="sapUiSmallMarginEnd" displaySize="M"/>
                                    <ObjectAttribute title="{i18n>createdBy}" text="{Name}" active="true"/>
                                    <FlexBox  alignItems="Center"
                                    justifyContent="Start">
                                    <ObjectAttribute title="{i18n>creationDate}" text="{CreatedAt}" active="true"/>
                                        <ObjectAttribute title="{i18n>creationDate}" text="{CreatedAt}"/>
                                        <ObjectAttribute title="{i18n>uploadedOn}" text="{CreatedBy}"/></FlexBox>
                            
			                        </FlexBox>
                             </layout:HorizontalLayout>
                             	
                      
			
		</content>
	</Panel>
				</f:content>
			</f:Card>
            </VBox>
                            
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>

</mvc:View>

	
