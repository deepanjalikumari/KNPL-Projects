<mvc:View
	controllerName="com.knpl.pragati.Catelogue.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
     xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants"
	xmlns:semantic="sap.f.semantic">

<f:DynamicPage headerExpanded="true">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Catelogues"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="true"> 
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Search" label="Search" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <Input id="idNameInput" placeholder="Search" showSuggestion="true" showValueHelp="true">
                                       
                                    </Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Creation Date" label="Creation Date" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <Input id="idCreationDate" showSuggestion="false">
                                        
                                    </Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Title" label="Title" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <Input id="idTitle" placeholder="" showSuggestion="false">
                                       
                                    </Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Created By" label="Created By" visibleInFilterBar="true" class="searchFieldLabelHidden">
                                <fb:control>
                                    <Input id="idCreatedBy" placeholder="" showSuggestion="false">
                                       
                                    </Input>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <Table id="idCatlogueTable" width="auto" items="{path: '/MasterProductCatalogueSet', parameters : {expand:'CreatedByDetails'},sorter:{
                    path: 'Id', 
                    descending: true
                } }" noDataText="No Data" growing="true" growingScrollToLoad="true" busyIndicatorDelay="{worklistViewModel>/tableBusyDelay}" updateFinished="onUpdateFinished">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>worklistTableTitle}" level="H4" class="stdTitleColor" />
                        <ToolbarSpacer />
                        <!-- <SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch" placeholder="{i18n>worklistSearchTooltip}">
                            <layoutData>
                                <OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField> -->
                        <Button text="Add Catelogue" press="onPressAdd" />
                        <Button tooltip="Sort" icon="sap-icon://sort" press="handleSortButtonPressed" />
                        <Button tooltip="Filter" icon="sap-icon://filter" press="handleFilterButtonPressed" />
                        
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="{i18n>title}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>creationDate}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>createdBy}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>action}"/>
                    </Column>
                    <Column width="15%" minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="{i18n>GenericEdit}"/>
                                </Column>
                            
                   
                   
                    
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press="onPress">
                        <!-- <dependents>
                            <core:Fragment fragmentName="com.knpl.pragati.DealerManagement.view.fragments.worklistFragments.ActionSheet" type="XML" />
                        </dependents> -->
                        <cells>
                            <ObjectIdentifier title="{Title}" />
                            <Text text="{path:'CreatedAt',formatter:'.formatter.dateFormatter2'}"/>
                            <Text text="{CreatedByDetails/Name}"/>
                            <Text text="{Status}"/>
                            <Button icon="sap-icon://edit" type="Transparent" press="onPressEdit" tooltip="Edit"/>
                            
                            
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>

</mvc:View>