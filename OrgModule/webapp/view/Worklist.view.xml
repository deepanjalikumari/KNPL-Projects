<mvc:View
	controllerName="com.knpl.pragati.OrgModule.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title
				text="{i18n>worklistTitle}"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{ path: 'tableData>/results' }"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished">

				<headerToolbar>
					<OverflowToolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}" level="H3"/>
						<ToolbarSpacer/>
						<Button text="{i18n>btnRefresh}" icon="sap-icon://refresh" press="onRefreshView">
							<layoutData>
								<OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<Button text="{i18n>btnAdd}" icon="sap-icon://add" press="onAdd">
							<layoutData>
								<OverflowToolbarLayoutData maxWidth="200px" priority="NeverOverflow"/>
							</layoutData>
						</Button>
                        <SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search=".onSearch">
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="200px"
									priority="NeverOverflow"/>
							</layoutData>
						</SearchField>
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column width="20%">
						<Text text="{i18n>id}"/>
					</Column>
					<Column width="50%">
						<Text text="{i18n>userName}"/>
					</Column>
                    <Column width="25%">
						<Text text="{i18n>email}"/>
					</Column>
                    <Column width="10%">
						<Text text="{i18n>mobileNo}"/>
					</Column>
                    <Column width="7%">
						<Text text="{i18n>colEdit}"/>
					</Column>
					<Column width="7%">
						<Text text="{i18n>colRemove}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem>
						<cells>
							<Text text="{tableData>Id}"/>
							<Text text="{tableData>Name}"/>
                            <Text text="{tableData>Email}"/>
                            <Text text="{tableData>MobileNo}"/>
							<Button icon="sap-icon://edit" press="onEdit" type="Transparent"/>
							<Button icon="sap-icon://delete" press="onDelete" type="Transparent" tooltip="remove"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

	</semantic:SemanticPage>


