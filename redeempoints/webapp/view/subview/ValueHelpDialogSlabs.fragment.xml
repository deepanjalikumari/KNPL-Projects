<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
        resizable="false"
        contentWidth="30%"
		id="selectSlabsDialog"
		title="Slabs"
        growing="true"
        search=".onValueHelpSlabsSearch"
        growingThreshold="15"
		items="{path:'oModelControl>/Slabs',filters:[{path:'IsArchived',operator:'EQ',value1:false},{path:'IsRedemptionAllowed',operator:'EQ',value1:true}],sorter:{path:'Id'}}"
		confirm=".onValueHelpSlabsOk"
		cancel=".onValueHelpSlabsOk">
		<StandardListItem 
			title="Points: {oModelControl>SlabPoints}"
			description="Amount: {oModelControl>RedemptionAmount}" />
	</SelectDialog>
</core:FragmentDefinition>
