<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<TableSelectDialog id="tableDialog" noDataText="{i18n>NoUsersFound}" title="{i18n>SelectUsers}" search=".handleFilters"
		confirm=".handleConfirm" cancel=".handleClose"
		items="{ path : '/UserSet', parameters : { expand : 'Admin,Role,Painter', select : 'Id,Admin/Name,Painter/Name,Admin/Email,Admin/Mobile,Painter/Email,Painter/Mobile,RoleId,Role/Role' }, filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false },{path : 'PainterId' , operator : 'GT' , value1 : 0} ], sorter : [ { path : 'RoleId', descending : false } ] }">
		<ColumnListItem id ="userDialog">
			<cells>
            <FlexBox >
				<Text text="{Admin/Name} "  visible="{=${Admin} !== null }"/>
                <Text text="{Painter/Name} "  visible="{=${Painter} !== null }"/>
            </FlexBox>
            <FlexBox >
				<Text text="{Admin/Mobile} "  visible="{=${Admin} !== null }"/>
                <Text text="{Painter/Mobile} "  visible="{=${Painter} !== null }"/>
            </FlexBox>
            <FlexBox >
				<Text text="{Admin/Email} "  visible="{=${Admin} !== null }"/>
                <Text text="{Painter/Email} "  visible="{=${Painter} !== null }"/>
            </FlexBox>
				<Text text="{Role/Role}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<Text text="{i18n>colFirstName}"/>
			</Column>
			<Column>
				<Text text="{i18n>colMobile}"/>
			</Column>
			<Column>
				<Text text="{i18n>colEmail}"/>
			</Column>
			<Column>
				<Text text="{i18n>colRole}"/>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>