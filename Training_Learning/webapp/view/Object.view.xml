<mvc:View controllerName="com.knpl.pragati.Training_Learning.controller.AddEditTraining" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:uxap="sap.uxap" height="100%">
    <Page busy="{oModelView>/busy}" binding="{objectView>/oDetails}" busyIndicatorDelay="0" showNavButton="false" showHeader="true" navButtonPress="navPressBack">
        <headerContent>
            <Bar>
                <contentLeft>
                    <Breadcrumbs currentLocationText="{i18n>TtlAddVideo}">
                        <Link text="{i18n>TrainingVideo}" press="navPressBack"/>
                    </Breadcrumbs>
                </contentLeft>
            </Bar>
        </headerContent>
        <VBox id="idVbxVideo" width="100%">
            <f:SimpleForm id="VideoDetails" editable="true" layout="ResponsiveGridLayout" title="{i18n>AddVideoDetails}" labelSpanXL="6" labelSpanL="6" labelSpanM="6" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <!-- <f:SimpleForm id="VideoDetails" editable="true" layout="ResponsiveGridLayout" title="{i18n>AddVideoDetails}" width="100%" defaultSpan="XL6 L6 M6 S12"> -->
                <f:content>
        	        <VBox>
				        <Label required="true" text="{i18n>colTitle}"/>
				        <Input width="100%" value="{objectView>Title}" maxLength="300"/>
			        </VBox>
			        <VBox>
				        <Label required="true" text="{i18n>colLink}"/>
				        <Input width="100%" value="{objectView>Url}" maxLength="300"/>
			        </VBox>
                </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>btnCancel}" press="onCancel"/>
                <Button text="{i18n>btnSave}" type="Emphasized" press="onSave"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
