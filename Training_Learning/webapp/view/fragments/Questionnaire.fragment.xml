<core:FragmentDefinition xmlns:upload="sap.m.upload"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <VBox id="idVbxQView" width="100%">
        <f:SimpleForm id="ViewTrainingQuestion" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <List id="ViewTrainingListQuestionnaire" enableBusyIndicator="true" growing="true" growingThreshold="15" growingScrollToLoad="false" noDataText="No data available" items="{path: 'oModelView>/TrainingDetails/TrainingQuestionnaire' ,  templateShareable: false, filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
                    <CustomListItem>
                        <VBox renderType="Bare" class="sapUiTinyMargin">
                            <HBox renderType="Bare" justifyContent="SpaceBetween">
                                <Title text="0{= Object.values(${oModelView>/TrainingDetails/TrainingQuestionnaire}).indexOf(${oModelView>}) + 1 }. {oModelView>Question}" class="sapUiSmallMarginBeginEnd" wrapping="true"/>
                                <FlexBox alignItems="Start" justifyContent="End">
                                    <Button icon="sap-icon://display-more" press="onViewQuestionnaire" type="Transparent" tooltip="{i18n>Details}" class="sapUiSmallMarginEnd" />

                                </FlexBox>
                            </HBox>
                            <Text text=""/>
                            <VBox items="{path:'oModelView>TrainingQuestionnaireOptions', templateShareable: false}">
                                <ObjectStatus text="o {oModelView>Option}" state="{= ${oModelView>IsCorrect} ? 'Success' : 'None' }" class="sapUiTinyMarginTopBottom sapUiSmallMarginBegin" visible="{= ${oModelView>IsArchived} === false}"/>
                            </VBox>
                            <Text text=""/>
                        </VBox>
                    </CustomListItem>
                </List>
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>