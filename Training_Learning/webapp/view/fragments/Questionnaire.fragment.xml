<core:FragmentDefinition xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox id="idVbxQ" width="100%">
        <f:SimpleForm id="ViewTrainingQuestion" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <List id="ListViewQ" enableBusyIndicator="true" growing="true"
					items="{path: 'oModelView>/TrainingDetails/TrainingQuestionnaire' , filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
                    <CustomListItem type="Active">
                        <VBox renderType="Bare">
                            <!-- <HBox> -->
                            <Text text=""/>
                                <Text text="{oModelView>Question}" class="sapUiSmallMarginBeginEnd"/>
                                <Text text=""/>
                            <!-- </HBox> -->
                            <HBox items="{oModelView>TrainingQuestionnaireOptions}">
                                <ObjectStatus text="{oModelView>Option}" state="{= ${oModelView>IsCorrect} ? 'Success' : 'None' }" class="sapUiSmallMarginBeginEnd" visible="{= ${oModelView>IsArchived} === false}"/>
                            </HBox>
                            <Text text=""/>
                        </VBox>
                    </CustomListItem>
				</List>
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>