<core:FragmentDefinition xmlns:upload="sap.m.upload"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="QuestionnaireOptionsDialog" title="Training Question" contentHeight="1200px" contentWidth="1200px">
        <VBox id="idVbxQ" width="100%" items="{oModelView>/oAddTraining}">
            <items>
                <VBox class="sapUiSmallMarginBeginEnd">
                    <Select  items="{ path: '/MasterLanguageSet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ]}" width="12%" selectedKey="{oModelView>LanguageCode}">
                        <core:Item key="{LanguageCode}" text="{LanguageDescription}"/>
                    </Select>
                    <TextArea value="{oModelView>Question}" width="100%" ></TextArea>
                    <HBox justifyContent="End">
                        <Button press="onAddQuestionnaireOptions" type="Emphasized" text="Add Options"/>
                    </HBox>
                    <List items="{oModelView>Options}">
                        <CustomListItem>
                            <!-- <HBox><RadioButton  groupName="{oModelView>LanguageCode}" selected="false" /><Input value="{oModelView>Option}" /></HBox> -->
                            <RadioButton groupName="{oModelView>LanguageCode}" selected = "{oModelView>IsCorrect}" select="onSelectOption"/>
                            <Input width="80%" maxLength="100" value="{oModelView>Option}"/>
                            <Button icon="sap-icon://delete" press="onDeleteQuestionnaireOptions" type="Transparent" tooltip="{i18n>Delete}"/>
                        </CustomListItem>
                    </List>
                    <Button text="{i18n>addMore}" width="20%" press="addMoreLanguage" type="Emphasized" tooltip="{i18n>addMore}"/>
                </VBox>
            </items>
        </VBox>
        <buttons>
            <Button text="Close" press="closeOptionsDialog"/>
            <Button text="Save" type="Emphasized" press="updateOptions"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>