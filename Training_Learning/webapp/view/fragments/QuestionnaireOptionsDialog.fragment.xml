<core:FragmentDefinition xmlns:upload="sap.m.upload"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="QuestionnaireOptionsDialog" title="Training Question" contentHeight="1200px" contentWidth="1200px">
        <VBox id="idVbxQ" width="100%" items="{path: 'oModelView>/oAddTraining', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
            <items>
                <VBox class="sapUiSmallMarginBeginEnd">
                    <ComboBox items="{ path: '/MasterLanguageSet'}" width="12%" selectedKey="{oModelView>LanguageCode}" selectionChange="onLanguageCodeChange" editable="{= ${oModelView>LanguageCode} !== 'EN'}">
                        <core:Item key="{LanguageCode}" text="{Language}" enabled="{parts:['LanguageCode','oModelView>/oAddTraining'],formatter:'.fmtCheckLanguage'}"/>
                    </ComboBox>
                    <TextArea value="{oModelView>Question}" width="100%" ></TextArea>
                    <HBox justifyContent="End">
                        <Button press="onAddQuestionnaireOptions" type="Emphasized" enabled="{= ${oModelView>Options/length} &lt; 4 }" text="Add Options" icon="sap-icon://add" visible="{= ${oModelView>LanguageCode} === 'EN'}"/>
                    </HBox>
                    <List items="{path: 'oModelView>Options' , filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ]}">
                        <CustomListItem>
                            <RadioButtonGroup editable="{= ${oModelView>LanguageCode} === 'EN'}" selectedIndex="{= ${oModelView>IsCorrect} === true ? 0 : -1}" select="onSelectOption">
                                <buttons>
                                   
                                        <RadioButton  />
                                </buttons>
                            </RadioButtonGroup>
                          
                            <Input width="80%" maxLength="100" value="{oModelView>Option}"/>
                            <Button icon="sap-icon://delete" press="onDeleteQuestionnaireOptions" type="Transparent" tooltip="{i18n>Delete}"/>
                        </CustomListItem>
                    </List>
                    <HBox justifyContent="End">
                        <Button text="{i18n>btnDeleteTranslation}" type="Reject" icon="sap-icon://delete" press="onDeleteTranslation" tooltip="{i18n>Delete}" visible="{= ${oModelView>LanguageCode} !== 'EN'}"/>
                    </HBox>
                </VBox>

            </items>
        </VBox>
        <Button text="{i18n>addTranslation}" icon="sap-icon://add" press="addMoreLanguage" type="Emphasized" tooltip="{i18n>addTranslation}" class="sapUiSmallMarginBegin"/>
        <buttons>
            <Button text="Close" press="closeOptionsDialog"/>
            <Button text="OK" type="Emphasized" press="updateOptions"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>