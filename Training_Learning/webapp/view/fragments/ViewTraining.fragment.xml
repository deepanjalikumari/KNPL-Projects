<core:FragmentDefinition xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox id="idVbxV" width="100%">
        <f:SimpleForm id="ViewTrainingDetails" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>TrainingDetails}"/>

                <Label text="{i18n>colTrainingType}"/>
                <Text text="{oModelView>/TrainingDetails/TrainingType/TrainingType}"/>

                <Label text="{i18n>colTitle}"/>
                <Text text="{oModelView>/TrainingDetails/Title}"/>

                <Label text="{i18n>colTrainingDescription}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/Description}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colStartDateTime}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/ViewStartDate}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colEndDateTime}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/ViewEndDate}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colRewardPoints}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/RewardPoints}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colLink}"/>
                <Text text="{oModelView>/TrainingDetails/Url}"/>

                <core:Title text="{= ${appView>/trainingType} === 'ONLINE' ? 'Target Group' : '' }"/>

                <Label text="{i18n>colDepot}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/Division/DepotId}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>

                <Label text="{i18n>colDivision}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/Division/Division}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>

                <Label text="{i18n>colPainterType}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/PainterTypeDetails/Description}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>

                <Label text="{i18n>colPainterArcheType}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/PainterArcheType/ArcheType}" visible="{= ${appView>/trainingType} === 'ONLINE'}"/>

                <Label text="{i18n>colState}" visible="{= ${appView>/trainingType} === 'OFFLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/State/State}" visible="{= ${appView>/trainingType} === 'OFFLINE'}"/>

                <Label text="{i18n>colCity}" visible="{= ${appView>/trainingType} === 'OFFLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/City/City}" visible="{= ${appView>/trainingType} === 'OFFLINE'}"/>

                <Label text="{i18n>colAddress}" visible="{= ${appView>/trainingType} === 'OFFLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/Address}" visible="{= ${appView>/trainingType} === 'OFFLINE'}"/>

                <Label text="{i18n>colImage}"/>
                <Image width="5rem" class="sapUiTinyMargin" height="5rem"
				src="{ parts : [{path : 'oModelView>__metadata'}, { path : 'oModelView>/oImage' } ] , formatter : '.formatter.giveImage' }"/>
				<!-- <u:FileUploader maximumFileSize="2" fileAllowed="onUpload" tooltip="{i18n>fileUploaderTrainingtip}" buttonOnly="true"
			    buttonText="{i18n>fileUploaderTrainingtip}"/> -->

            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>