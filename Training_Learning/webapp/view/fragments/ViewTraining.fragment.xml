<core:FragmentDefinition xmlns:f2="sap.f" xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox id="idVbxV" width="100%">
        <f:SimpleForm id="ViewTrainingDetails" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="2" singleContainerFullSize="false">
            <f:content>
                <core:Title text="{i18n>TrainingDetails}"/>

                <Label text="{i18n>colTrainingMode}"/>
                <Text text="{oModelView>/TrainingDetails/TrainingType/TrainingType}"/>

                <Label text="{i18n>colTrainingType}"/>
                <Text text="{oModelView>/TrainingDetails/TrainingSubTypeDetails/TrainingSubType}"/>

                <Label text="{i18n>colTitle}"/>
                <Text text="{oModelView>/TrainingDetails/Title}"/>

                <Label text="{i18n>colTrainingDescription}"/>
                <Text text="{oModelView>/TrainingDetails/Description}"/>

                <Label text="{i18n>colLink}"/>
                <Text text="{oModelView>/TrainingDetails/Url}"/>

                <Label text="{i18n>colStartDateTime}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/ViewStartDate}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colEndDateTime}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>
                <Text text="{oModelView>/TrainingDetails/ViewEndDate}" visible="{= ${appView>/trainingType} !== 'VIDEO'}"/>

                <Label text="{i18n>colDuration}" visible="{= ${appView>/trainingType} === 'VIDEO'}"/>
				<Text text="{oModelView>/TrainingDetails/Duration}" visible="{= ${appView>/trainingType} === 'VIDEO'}"/>

                <Label text="{i18n>colRewardPoints}"/>
                <Text text="{oModelView>/TrainingDetails/RewardPoints}"/>

                <core:Title text="{= ${appView>/trainingType} === 'ONLINE' ? 'Target Group' : '' }"/>

                <Label text="{i18n>colZone}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/Zones}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}" editable="false" items="{ path : '/MasterZoneSet'}">
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>

                <Label text="{i18n>colDivision}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/Divisions}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}" editable="false" items="{ path : '/MasterDivisionSet'}">
					<core:Item key="{Id}" text="{Id}"/>
				</MultiComboBox>

                <Label text="{i18n>colDepot}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>
                <MultiComboBox selectedKeys="{oModelView>/TrainingDetails/Depots}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}" editable="false" items="{ path : '/MasterDepotSet'}">
					<core:Item key="{Id}" text="{Depot} ( {Id} )"/>
				</MultiComboBox>

                <Label text="{i18n>colPainterType}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/PainterTypeDetails/PainterType}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>

                <Label text="{i18n>colPainterArcheType}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>
                <Text text="{oModelView>/TrainingDetails/PainterArcheType/ArcheType}" visible="{= ${appView>/trainingType} !== 'OFFLINE'}"/>

                <!-- <Label text="{i18n>colImage}"/>
                <Image width="5rem" src="{oModelView>/ProfilePicHeader}" class="sapUiTinyMarginBegin"/> -->

            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>