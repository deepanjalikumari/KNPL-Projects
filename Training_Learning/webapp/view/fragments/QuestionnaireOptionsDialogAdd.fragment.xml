<core:FragmentDefinition xmlns:upload="sap.m.upload" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
<Dialog id="QuestionnaireOptionsDialogAdd" title="{i18n>TitleAddQuestionnaireOptions}" contentHeight="800px" contentWidth="600px">
    <VBox id="idVbxQ" width="100%">
        <f:SimpleForm id="QuestionOptions" editable="true" layout="ResponsiveGridLayout" labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="2" singleContainerFullSize="false">
            <List id="ListMultyQuestions" enableBusyIndicator="true" headerText="{i18n>colQuestionnaireOptions}" noDataText="{i18n>tableNoData}" growingThreshold="15" growingScrollToLoad="false" growing="true" items="{path: 'oModelView>TrainingQuestionnaireLocalized/' , filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
                <CustomListItem>
                    <VBox>
                        <HBox>
                            <Label required="true" text="{i18n>colLanguage}"/>
                            <ComboBox width="30%" selectionChange="onLanguageChange" selectedKey="{oModelView>LanguageCode}" items="{ path: '/MasterLanguageSet', filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ]}">
                                <core:Item key="{LanguageCode}" text="{LanguageDescription}"/>
                            </ComboBox>
                        </HBox>
                        <HBox>
                            <Label text="{i18n>colQuestion}" required="true"/>
                            <TextArea maxLength="300" width="80%" value="{oModelView>Question}" rows="2"/>
                        </HBox>
                    </VBox>
                <List id="ListOptions" enableBusyIndicator="true" headerText="{i18n>colQuestionnaireOptions}" noDataText="{i18n>tableNoData}" growingThreshold="15" growingScrollToLoad="false" growing="true"
                items="{path: 'oModelView>TrainingQuestionnaireOptions/' , filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
                    <headerToolbar>
                        <Toolbar>
                            <ToolbarSpacer/>
                            <Button press="onAddQuestionnaireOptions" icon="sap-icon://add" type="Emphasized" text="{i18n>AddOptions}"/>
                        </Toolbar>
                    </headerToolbar>
                    <CustomListItem>
                        <RadioButton groupName="GroupA" selected = "{oModelView>IsCorrect}"/>
                        <Input width="80%" maxLength="100" value="{oModelView>TrainingQuestionnaireOptionsLocalized/Option}"/>
                        <Button icon="sap-icon://delete" press="onDeleteQuestionnaireOptions" type="Transparent" tooltip="{i18n>Delete}"/>
                    </CustomListItem>
                </List>
                </CustomListItem>
            </List>
            <Button text="{i18n>addMore}" width="20%" press="onAddMore" type="Emphasized" tooltip="{i18n>addMore}"/>
        </f:SimpleForm>
    </VBox>
    <buttons>
		<Button text="{i18n>btnClose}" press="closeOptionsDialog"/>
        <Button text="{i18n>btnUpdateOptions}" type="Emphasized" press="updateOptions"/>
	</buttons>
</Dialog>
</core:FragmentDefinition>