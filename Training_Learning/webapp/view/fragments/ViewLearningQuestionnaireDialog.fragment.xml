<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>Questionnaire}" titleAlignment="Center" afterClose="onLearningQuestionnaireDialogClose">
        <content>
            <Table id="LearningQuestionnaire" items="{path:'SubmittedQuestionnaire/', parameters:{expand:'Question,Question/LearningQuestionnaireOptions'},factory:'.LearningQuestionnaireFactory' }" width="auto" noDataText="{i18n>tableNoData}" growingScrollToLoad="false" growing="true" growingThreshold="10">

                <columns>
                    <Column>
                        <Text text="{i18n>Question}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>Option1}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>Option2}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>Option3}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>Option4}"/>
                    </Column>


                </columns>
                <!-- <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{Question/Question}" />
