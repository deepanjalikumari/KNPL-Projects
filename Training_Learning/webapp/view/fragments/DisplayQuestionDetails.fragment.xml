<core:FragmentDefinition xmlns:upload="sap.m.upload"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="QuestionnaireOptionsDialog2" title="Training Question" contentHeight="1200px" contentWidth="1200px">
        <VBox  width="100%" items="{path: 'oModelView>/oAddTraining',  templateShareable: false, filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ] }">
            <items>
                <VBox class="sapUiSmallMarginBeginEnd">
                    <ComboBox  items="{ path: '/MasterLanguageSet', templateShareable: false}" width="12%" selectedKey="{oModelView>LanguageCode}"  editable="false">
                        <core:Item key="{LanguageCode}" text="{Language}" enabled="{parts:['LanguageCode','oModelView>/oAddTraining'],formatter:'.fmtCheckLanguage'}"/>
                    </ComboBox>
                    <Text text="{oModelView>Question}" width="100%" />
                    <!-- <HBox justifyContent="End">
                        <Button press="onAddQuestionnaireOptions" type="Emphasized" enabled="{= ${oModelView>Options/length} &lt; 4 }" text="Add Options" icon="sap-icon://add" visible="{= ${oModelView>LanguageCode} === 'EN'}"/>
                    </HBox> -->
                    <List items="{path: 'oModelView>Options' ,  templateShareable: false, filters : [ { path : 'IsArchived' , operator : 'EQ' , value1 : false } ]}">
                        <CustomListItem>
                            <HBox>
                                <RadioButtonGroup editable="false" selectedIndex="{= ${oModelView>IsCorrect} === true ? 0 : -1}" >
                                    <buttons>

                                        <RadioButton  />
                                    </buttons>
                                </RadioButtonGroup>
                            
                                <Text width="100%"  text="{oModelView>Option}" />
                            </HBox>
                            <!-- <Button icon="sap-icon://delete" press="onDeleteQuestionnaireOptions" type="Transparent" tooltip="{i18n>Delete}"/> -->
                        </CustomListItem>
                    </List>
                    <!-- <HBox justifyContent="End">
                        <Button text="{i18n>btnDeleteTranslation}" type="Reject" icon="sap-icon://delete" press="onDeleteTranslation" tooltip="{i18n>Delete}" visible="{= ${oModelView>LanguageCode} !== 'EN'}"/>
                    </HBox> -->
                </VBox>

            </items>
        </VBox>
        <!-- <Button text="{i18n>addTranslation}" icon="sap-icon://add" press="addMoreLanguage" type="Emphasized" tooltip="{i18n>addTranslation}" class="sapUiSmallMarginBegin"/> -->
        <buttons>
            <Button text="Close" press="closeOptionsDialog2"/>
          
        </buttons>
    </Dialog>
</core:FragmentDefinition>