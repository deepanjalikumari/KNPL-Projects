<mvc:View controllerName="com.knpl.pragati.SchemeOffers.controller.DetailPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <f:DynamicPage
        headerExpanded="true"
        stickySubheaderProvider="idIconTabBar"
        showFooter="true"
        class="sapUiNoContentPadding"
        busy="{DetailViewModel>/busy}">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Buy 1000ltr of scheme (offer)"/>
                </f:heading>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="{i18n>currentDetailPageBreadcrumbText}">
                        <Link press="onPressBreadcrumbLink" text="{i18n>homeBreadcrumbText}" />
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <Avatar
                            id="idOfferImg"
                            displaySize="L"
                            displayShape="Square" />
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <layout:HorizontalLayout class="sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerCreationDate}"/>
                            <Text text="12/01/2021" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout class="sapUiTinyMarginTop sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerCreatedBy}"/>
                            <Text text="Satish Kumar" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout class="sapUiTinyMarginTop sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerOfferPoint}"/>
                            <Text text="100 Points" />
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiLargeMarginEnd">
                        <layout:HorizontalLayout class="sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerStartDate}"/>
                            <Text text="12/01/2021" />
                        </layout:HorizontalLayout>
                        <layout:HorizontalLayout class="sapUiTinyMarginTop sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerEndDate}"/>
                            <Text text="12/01/2021" />
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout>
                        <layout:VerticalLayout class="sapUiTinyMarginBottom">
                            <Label class="sapUiTinyMarginEnd" text="{i18n>headerStatus}"/>
                            <ObjectStatus class="statusTextSizeLarge sapUiTinyMarginTop" text="Pending" state="Warning" />
                        </layout:VerticalLayout>
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <IconTabBar
                id="idIconTabBar"
                expanded="{device>/isNoPhone}">
                <items>
                    <IconTabFilter text="{i18n>offerDetailsTabFilter}" key="offerDetails">
                        <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.DisplayDetail" type="XML" />
                    </IconTabFilter>
                    <IconTabFilter text="{i18n>historyTabFilter}" key="history">
                        
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Edit" type="Emphasized" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
