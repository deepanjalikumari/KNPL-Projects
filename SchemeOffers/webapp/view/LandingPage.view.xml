<mvc:View controllerName="com.knpl.pragati.SchemeOffers.controller.LandingPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:vm="sap.ui.comp.variants">
    <f:DynamicPage headerExpanded="true" stickySubheaderProvider="idIconTabBar" class="sapUiContentPadding">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>landingPageViewTitle}"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="true"> 
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Search" label="{i18n>searchFilterLabel}" visibleInFilterBar="true">
                                <fb:control>
                                    <SearchField id="idSearchInput" data:filterName="Search" value="{ViewModel>/filterBar/search}" placeholder="{i18n>searchFilterPlaceholder}" />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Offer Type" label="{i18n>offerTypeFilterLabel}" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox id="idOfferTypeInput" data:filterName="Offer Type" selectedKey="{ViewModel>/filterBar/offerType}">
                                        <items>
                                            <core:Item key="all" text="All" />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Date" label="{i18n>dateFilterLabel}" visibleInFilterBar="true">
                                <fb:control>
                                    <DatePicker id="idDateInput" data:filterName="Date" value="{ViewModel>/filterBar/date}" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem groupName="__$INTERNAL$" name="Status" label="{i18n>statusFilterLabel}" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox id="idStatusInput" data:filterName="Status" selectedKey="{ViewModel>/filterBar/status}">
                                        <items>
                                            <core:Item key="all" text="All" />
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <!-- DynamicPage Content -->
        <f:content>
            <Table
                id="idOffersTable"
                width="auto"
                items="{MockData>/OfferSet}"
                noDataText="{i18n>tblNoDataText}"
                growing="true"
                growingScrollToLoad="true"
                busy="{ViewModel>/busy}"
                updateFinished="onUpdateFinished">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>tblTitle} ({ViewModel>/TotalCount})" />
                        <ToolbarSpacer />
                        <Button text="{i18n>addToolBtnText}" tooltip="{i18n>addToolBtnTooltip}" type="Emphasized" press="onPressAdd"/>
                        <Button tooltip="{i18n>sortBtnTooltip}" icon="sap-icon://sort" press="handleSortButtonPressed" />
                        <Button tooltip="{i18n>tblSettingsBtnTooltip}" icon="sap-icon://action-settings" press="handlePersonalizationPressed" />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="{i18n>tblColOfferName}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColCreationDate}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColReward}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColStartDate}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColEndDate}"/>
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>tblColCreatedBy}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>tblColStatus}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>tblColAction}"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press="onPressListItem">
                        <cells>
                            <Text text="{MockData>offerName}"/>
                            <Text text="{MockData>createdAt}"/>
                            <Text text="{MockData>reward}"/>
                            <Text text="{MockData>startDate}"/>
                            <Text text="{MockData>endDate}"/>
                            <Text text="{MockData>createdBy}"/>
                            <ObjectStatus text="{MockData>status}"/>
                            <ObjectStatus text="{MockData>action}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
