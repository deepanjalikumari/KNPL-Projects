            </f:layout>
            <f:formContainers>


                <f:FormContainer title="{i18n>BasicInformation}" visible="{oModelControl2>/OfferType/BasicInformation}">
                    <f:formElements>
                        <f:FormElement label="{i18n>formBasicInfoLbl1}">
                            <f:fields>
                                <Text text="{OfferType/OfferType}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formBasicInfoLbl3}">
