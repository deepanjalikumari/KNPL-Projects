<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <f:Form id="FormDisplay" editable="false">
            <f:layout>
                <f:ColumnLayout columnsM="2" columnsL="3" columnsXL="3"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer title="{i18n>BasicInformation}">
                    <f:formElements>
                        <f:FormElement label="{i18n>formBasicInfoLbl1}">
                            <f:fields>
                                <Text text="{SchemeType/SchemeType}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formBasicInfoLbl3}">
                            <f:fields>
                                <Text text="{path:'StartDate',formatter:'.formatter.fmtDate'}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formBasicInfoLbl3}">
                            <f:fields>
                                <Text text="{path:'EndDate',formatter:'.formatter.fmtDate'}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formBasicInfoLbl2}">
                            <f:fields>
                                <Text text="{Title}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formBasicInfoLbl5}">
                            <f:fields>
                                <Text text="{i18n>Description}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>formRegion}">
                    <f:formElements>
                        <f:FormElement label="{i18n>formRegionLbl1}">
                            <f:fields>
                                <MultiComboBox selectedKeys="{oModelControl2>/Display/Zones}" editable="false" placeholder="{i18n>placeHolder1}" items="{path:'/MasterZoneSet' }">
                                    <core:Item text="{Id}" key="{Id}"/>
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formRegionLbl2}">
                            <f:fields>
                                <MultiComboBox selectedKeys="{oModelControl2>/Display/Divisions}" editable="false" placeholder="{i18n>placeHolder1}" items="{/MasterDivisionSet}">
                                    <core:Item text="{Id}" key="{Id}"/>
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formRegionLbl3}">
                            <f:fields>
                                <MultiComboBox selectedKeys="{oModelControl2>/Display/Depots}" editable="false" placeholder="{i18n>placeHolder1}" items="{/MasterDepotSet}">
                                    <core:ListItem text="{Depot} - {Id}" key="{Id}" />
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>formApplicablepainter}">
                    <f:formElements>
                        <f:FormElement label="">
                            <f:fields>
                                <RadioButtonGroup id="rbg" editable="false" selectedIndex="{= ${IsSpecificPainter} === false ? 0 : 1}" columns="2">
                                    <RadioButton text="{i18n>formApplicableLbl1}"/>
                                    <RadioButton text="{i18n>formApplicableLbl2}"/>
                                </RadioButtonGroup>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formApplicableLbl3}">
                            <f:fields>
                                <MultiComboBox selectedKeys="{oModelControl2>/Display/ArchiTypes}" editable="false" placeholder="{i18n>placeHolder1}" items="{path:'/MasterArcheTypeSet'}">
                                    <core:Item text="{ArcheType}" key="{Id}"/>
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formApplicableLbl4}">
                            <f:fields>
                                <Text text="{Potential/Potential}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formApplicableLbl5}">
                            <f:fields>
                                <MultiComboBox selectedKeys="{oModelControl2>/Display/PainterProducts}" editable="false" placeholder="{i18n>placeHolder1}" items="{path:'/MasterRepProductSkuSet' }">
                                    <core:Item text="{Description}" key="{SkuCode}"/>
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formApplicableLbl6}">
                            <f:fields>
                                <Text text="{Slab/Slab}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>formApplicableProducts}">
                    <f:formElements>
                        <f:FormElement label="{i18n>formApplicableProducts}">
                            <f:fields>
                                <MultiComboBox editable="false" selectedKeys="{oModelControl2>/Display/ApplicableProducts}" placeholder="{i18n>placeHolder1}" items="{path:'/MasterRepProductSkuSet' }">
                                    <core:Item text="{Description}" key="{SkuCode}"/>
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formAppProdPurchaseVolume}">
                            <f:fields>
                                <Text text="{PurchaseVolumeRequired}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formAppProdAccuredPoints}">
                            <f:fields>
                                <Text text="{AccuredPointsRequired}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>formRewards}">
                    <f:formElements>
                        <f:FormElement label="{i18n>formRewardsPoints}">
                            <f:fields>
                                <Text text="{RewardPoints}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formRewardsCash}">
                            <f:fields>
                                <Text text="{RewardCash}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>formRewardsGift}">
                            <f:fields>
                                <Text text="{RewardGiftId}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>AdditionalRewards}">
                    <f:formElements>
                        <f:FormElement>
                            <f:fields>
                                <RadioButtonGroup editable="false" selectedIndex="{= ${HasBonusPercentage} === false? 0:1 }" columns="2">
                                    <RadioButton text="{i18n>BonusPoints}"/>
                                    <RadioButton text="{i18n>BonusPointsPercentage}"/>
                                </RadioButtonGroup>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <f:fields>
                                <Text text="{BonusRewardPoints}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>BonusApplicableProducs}">
                            <f:fields>
                                <MultiComboBox editable="false" selectedKeys="{oModelControl2>/Display/BonusApplicableProducts}" placeholder="{i18n>placeHolder1}" items="{path:'/MasterRepProductSkuSet' }">
                                    <core:Item text="{Description}" key="{SkuCode}"/>
                                </MultiComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>BonusValidity}">
                    <f:formElements>
                        <f:FormElement>
                            <f:fields>
                                <RadioButtonGroup editable="false" selectedIndex="{= ${oModelControl2>/HasTillDate} === false ? 0 : 1}" columns="2" select="onRbBonusValidity">
                                    <RadioButton text="{i18n>TillDuration}"/>
                                    <RadioButton text="{i18n>TillDate}"/>
                                </RadioButtonGroup>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement visible="{= ${oModelControl2>/HasTillDate} }">
                            <f:fields>
                                <Text class="sapUiSmallMarginBegin" text="{path:'BonusValidityDate',formatter:'.formatter.fmtDate'}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <f:fields>
                                <Text class="sapUiSmallMarginBegin" text="{parts:['BonusValidityDurationYear','BonusValidityDurationMonth','BonusValidityDurationDays'],formatter:'.formatter.fmtVldtyDuration'}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
                <f:FormContainer title="{i18n>Attachment}">
                    <f:formElements>
                        <f:FormElement>
                            <f:fields>
                                <Text text="{i18n>NoAttachmentFound}"  visible="{= !${oModelControl2>/ImageLoaded} }" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement>
                            <f:fields>
                                <Link text="{i18n>ViewAttachment}" visible="{oModelControl2>/ImageLoaded}" press="onViewAttachment" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
