<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
        resizable="false"
        contentWidth="30%"
		id="selectDialog"
		title="{i18n>Offers}"
        growing="true"
        growingThreshold="15"
		items="{path:'/OfferSet',filters:[{path:'ParentOfferId',operator:'EQ',value1:0}], sorter:{path:'CreatedAt',descending:true}}"
		search=".onValueHelpSearch"
		confirm="onParentOfferValueHelpClose"
		cancel=".onValueHelpClose">
		<StandardListItem 
			title="{Title}"
			description="Desc: {Description}" />
	</SelectDialog>
</core:FragmentDefinition>
