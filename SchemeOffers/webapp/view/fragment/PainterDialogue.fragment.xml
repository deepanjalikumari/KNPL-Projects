<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns="sap.ui.table"
    	xmlns:u="sap.ui.unified">
	  <m:Dialog id="idP" showHeader="false" >
           	<Table id="idPainterDialog"
				rows="{oModelControl>/ofragmentModel}"
			  selectionMode="None"
               width="100%"
				paste="onPaste"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Painter"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
                 <Column width="5%">
						<m:CheckBox select="onSelectAll" ></m:CheckBox> 
						<template>
							<m:CheckBox  selected="{oModelControl>isSelected}"  />
						</template>
					</Column>
					<Column >
						<m:Label text="{i18n>PainterName}" />
						<template>
							<m:Text text="{oModelControl>PainterName}" wrapping="false" />
						</template>
					</Column>
                    <Column >
						<m:Label text="{i18n>Mobile}" />
						<template>
							<m:Text text="{oModelControl>PainterMobile}" wrapping="false" />
						</template>
					</Column>
					
				</columns>
			</Table>
          <m:buttons>
            <m:Button text="Cancel" type="Ghost" press="onSavePaitnerClose" />
            <m:Button  text="Save" type="Ghost" press="onSaveUploadPaitner"/>
        </m:buttons>
    </m:Dialog>
</core:FragmentDefinition>