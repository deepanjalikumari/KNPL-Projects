<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>Attachment}" contentWidth="600px" contentHeight="500px"  titleAlignment="Center" afterClose="onAfterAttachClose">
        <content>
            <Carousel class="sapUiContentPadding" loop="true">
                <Image decorative="false" alt="No Image Found" src="{path:'__metadata/media_src' , formatter: '.formatter.formatURL' }"></Image>
            </Carousel>
        </content>
        <endButton>
            <Button text="Close" press="onAttachDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
