<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
		<SelectDialog
		title="Products"
         growing="true"
        growingThreshold="12"
		class="sapUiPopupWithPadding"
		items="{path:'/MasterProductSet',sorter:{path:'ProductName'},parameters:{select:'Id,ProductName'} }"
	    search="_handlePValueHelpSearch"
		confirm="_handleProdValueHelpConfirm"
        cancel="_handleProdValueHelpClose"
		multiSelect="true">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
            title="{ProductName}"
			 />
	</SelectDialog>
</core:FragmentDefinition>
