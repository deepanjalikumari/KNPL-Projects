<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Table id="idHistoryTable">
        <headerToolbar>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <SearchField width="15rem" placeholder="Search"/>
                <Button tooltip="Sort" icon="sap-icon://sort" press="handleSortButtonPressed"/>
                <Button tooltip="Settings" icon="sap-icon://action-settings" press="handleSettingsButtonPressed"/>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column><Text text="Painter ID"/></Column>
            <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Painter Name"/></Column>
            <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Mobile Number"/></Column>
            <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Color Bought"/></Column>
            <Column><Text text="Status"/></Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation">
                <cells>
                    <Text text="{SupplierName}"/>
                    <Text text="{SupplierName}"/>
                    <Text text="{SupplierName}"/>
                    <Text text="{SupplierName}"/>
                    <Text text="{SupplierName}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
