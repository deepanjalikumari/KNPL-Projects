<mvc:View height="100%" controllerName="com.knpl.pragati.SchemeOffers.controller.wizard"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Wizard id="CreateProductWizard" finishButtonText="Finish" currentStep="PricingStep" class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
        <steps>
            <WizardStep id="ProductTypeStep" title="{i18n>BasicInformation}" activate="onActivate">
                <content>
                    <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.BasicInformation" type="XML"/>
                </content>
            </WizardStep>
            <WizardStep id="ProductInfoStep" title="{i18n>ApplicableProducts}" activate="onActivate">
                <content>
                    <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.ApplicableProducts" type="XML"/>
                </content>
            </WizardStep>
            <WizardStep id="OptionalInfoStep" title="{i18n>formApplicableLbl10}" activate="onActivate">
                <content>
                    <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.RewardRatio" type="XML"/>
                </content>
            </WizardStep>
            <WizardStep id="wzdStep4" title="{i18n>ApplicablePainters}" activate="onActivate">
                <content>
                    <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.ApplicablePainters" type="XML"/>
                </content>
            </WizardStep>
            <WizardStep id="wzdStep5" title="{i18n>formBonusReward}" activate="onActivate">
                <content>
                    <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.RewardRatioBonus" type="XML"/>
                </content>
            </WizardStep>
            <WizardStep id="PricingStep" title="Pricing" activate="onActivate">
                <MessageStrip class="sapUiSmallMarginBottom" text="You can use the wizard previousStep() and nextStep() methods to navigate from step to step without validation. Also you can use the GoToStep(step) method to scroll programmatically to previously visited steps." showIcon="true"/>
                <form:SimpleForm editable="true">
                    <Label text="Price"/>
                    <Input value="{/productPrice}"/>
                    <Label text="Discoung group"/>
                    <MultiComboBox>
                        <core:Item key="Children" text="Kids"/>
                        <core:Item key="Children" text="Teens"/>
                        <core:Item key="Children" text="Adults"/>
                        <core:Item key="Children" text="Old people"/>
                    </MultiComboBox>
                    <Label text=" VAT is included"/>
                    <CheckBox selected="{/productVAT}"/>
                </form:SimpleForm>
            </WizardStep>
        </steps>
    </Wizard>
</mvc:View>
