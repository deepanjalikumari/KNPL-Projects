<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
    <Table id="idPainterTable" growing="true" growingThreshold="15" width="auto" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
        <headerToolbar>

        </headerToolbar>

        <columns>

            <Column>
                <Text text="{i18n>PainterName}" />
            </Column>
            <Column>
                <Text text="{i18n>Mobile}" />
            </Column>
            <Column width="5%">
                <Text text="{i18n>formRegionLbl1}" />
            </Column>
            <Column width="5%">
                <Text text="{i18n>formRegionLbl2}" />
            </Column>
            <Column  width="10%">
                <Text text="{i18n>formRegionLbl3}" />
            </Column>
            <Column>
                <Text text="{i18n>DepotCode}" />
            </Column>
            <Column>
                <Text text="{i18n>Dealer}" />
            </Column>
            <Column>
                <Text text="{i18n>DealerCode}" />
            </Column>
            <Column>
                <Text text="{i18n>Achievement}" />
            </Column>
            <Column>
                <Text text="{i18n>SchemeSlab}" />
            </Column>
            <Column>
                <Text text="{i18n>BalanceQty}" />
            </Column>
              <Column>
                <Text text="{i18n>EligibleForRwards}" />
            </Column>
            <Column>
                <Text text="{i18n>Rewards}" />
            </Column>

        </columns>
        <dependents >
            <ColumnListItem id="idPainterTableTemplate">
                <cells>
                    <Text text="{Name}" />
                    <Text text="{Mobile}" />
                    <Text text="{ZoneId}" />
                    <Text text="{DivisionId}" />
                    <Text text="{Depot}"/>
                    <Text text="{DepotId}"/>
                    <Text text="{DealerName}"/>
                    <Text text="{DealerId}"/>
                    <Text text="{ProgressValue}"/>
                    <Text text="{ProgressMax}"/>
                    <Text text="{= ${ProgressMax} - ${ProgressValue} }"/>
                      <Text text="{parts:['RedemptionStatus'],formatter:'.formatter.chkEligibleForGift'}"/>
                     <Text text="{parts:['RedemptionStatus','RedemptionType','RewardPoints','RewardCash','RewardGift'],formatter:'.formatter.checkPainterReward'}"/>

                </cells>
            </ColumnListItem>
        </dependents>
    </Table>

</core:FragmentDefinition>
