<core:FragmentDefinition xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core">
    <Table items="{oModelControl3>/oData/Painters}" updateFinished="onUpdate2" updateStarted="onPainterUpdatedStart" id="idPainterTable" growing="true" growingThreshold="15" width="auto" noDataText="{i18n>tableNoDataText}" growingScrollToLoad="false" busyIndicatorDelay="{oModelView>/tableBusyDelay}">
        <headerToolbar>
            <Toolbar >
                <ToolbarSpacer />
                <Button type="Emphasized" icon="sap-icon://download" text="{i18n>Download}" press="onPainterListDownload" />

            </Toolbar>
        </headerToolbar>

        <columns>

            <Column>
                <Text text="{i18n>PainterName}" />
            </Column>
            <Column>
                <Text text="{i18n>Mobile}" />
            </Column>
            <Column width="5%">
                <Text text="{i18n>formRegionLbl1}" />
            </Column>
            <Column width="5%">
                <Text text="{i18n>formRegionLbl2}" />
            </Column>
            <Column width="10%">
                <Text text="{i18n>formRegionLbl3}" />
            </Column>
            <!-- <Column>
                <Text text="{i18n>DepotCode}" />
            </Column> -->
            <Column>
                <Text text="{i18n>Dealer}" />
            </Column>
            <!-- <Column>
                <Text text="{i18n>DealerCode}" />
            </Column> -->
            <Column>
                <Text text="{i18n>Achievement}" />
            </Column>
            <Column>
                <Text text="{i18n>SchemeSlab}" />
            </Column>
             <Column>
                <Text text="{i18n>MaxSlabValue}" />
            </Column>
            <Column>
                <Text text="{i18n>BalanceQty}" />
            </Column>
            <Column width="8%">
                <Text text="{i18n>MUltiplesAllowed}" />
            </Column>
            <Column>
                <Text text="{i18n>EligibleForRwards}" />
            </Column>
            <Column>
                <Text text="{i18n>RedeemedRewards}" />
            </Column>
            <Column>
                <Text text="{i18n>BonusPoints}" visible="{= ${OfferTypeId}===3 || ${OfferTypeId}===4 }"/>
            </Column>
            <Column>
                <Text text="{i18n>Remark}" />
            </Column>

        </columns>
        <items >
            <ColumnListItem id="idPainterTableTemplate">
                <cells>
                    <Text text="{oModelControl3>Name}" />
                    <Text text="{oModelControl3>Mobile}" />
                    <Text text="{oModelControl3>ZoneId}" />
                    <Text text="{oModelControl3>DivisionId}" />
                    <Text text="{oModelControl3>Depot}"/>
                    <!-- <Text text="{oModelControl3>DepotId}"/> -->
                    <Text text="{oModelControl3>DealerName}"/>
                    <!-- <Text text="{oModelControl3>DealerId}"/> -->
                    <Text text="{oModelControl3>ProgressValue}"/>
                    <Text text="{oModelControl3>ProgressMax}"/>
                     <Text text="{oModelControl3>MaxSlabValue}"/>
                    <Text text="{= ${oModelControl3>MaxSlabValue} - ${oModelControl3>ProgressValue} }"/>
                    <Text text="{oModelControl3>RedemeptionIndex} / {oModelControl3>RedemptionMax}"/>
                    <Text text="{parts:['oModelControl3>RedemptionStatus'],formatter:'.formatter.chkEligibleForGift'}"/>
                    <Text text="{parts:['oModelControl3>RedemptionStatus','oModelControl3>RedemptionType','oModelControl3>RedeemedRewardPoints','oModelControl3>RedeemedRewardCash','oModelControl3>RewardGift'],formatter:'.formatter.checkPainterReward'}"/>
                    <Text text="{oModelControl3>RedeemedRewardBonusPoints}" visible="{= ${OfferTypeId}===3 || ${OfferTypeId}===4 }" />
                     <Text text="{oModelControl3>Remark}"/>

                </cells>
            </ColumnListItem>
        </items>
    </Table>

</core:FragmentDefinition>
