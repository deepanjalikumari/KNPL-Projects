<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:Form id="FormChange"
			editable="false">
			<f:layout>
				<f:ColumnLayout 
					columnsM="2"
					columnsL="3"
					columnsXL="3"
				/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="Basic Information">
					<f:formElements>
						<f:FormElement label="{i18n>formBasicInfoLbl1}">
							<f:fields>
                               <ComboBox placeholder="{i18n>placeHolder1}" items="{path:'/MasterSchemeTypeSet',filters:[{path:'IsArchived',operator:'EQ',value1:false}] }" selectedKey="{path:'oModelView>/PainterTypeId',type:'.customInt' }">
                                     <core:Item text="{SchemeType}" key="{Id}" />
                             </ComboBox>

							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>formBasicInfoLbl2}">
							<f:fields>
								<Input  placeholder="{i18n>placeHolder3}"  maxLength="50" required="true" value="{path : 'oModelView>/Title', type : 'sap.ui.model.type.String', constraints : {minLength :1 , maxLength :50, search :'^[a-zA-Z0-9]{1}[wW]*' } }" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>formBasicInfoLbl3}">
							<f:fields>
								<DatePicker dateValue="{oModelView>/StartDate}" displayFormat="dd/MM/yyyy" placeholder="DD/MM/YYYY"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>formBasicInfoLbl4}">
							<f:fields>
								<DatePicker dateValue="{oModelView>/EndDate}" displayFormat="dd/MM/yyyy" placeholder="DD/MM/YYYY"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>formBasicInfoLbl5}">
							<f:fields>
								<TextArea placeholder="{i18n>placeHolder3}" maxLength="50" value="{path : 'oModelView>/Description', type : 'sap.ui.model.type.String', constraints : {minLength :1 , maxLength :50, search :'^[a-zA-Z0-9]{1}[wW]*' } }" />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Scheme Image">
							<f:fields>
								<u:FileUploader name="schemeImgFileUpload"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement>
							<f:fields>
								<Button width="5rem" text="Upload" tooltip="Upload"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="Region">
					<f:formElements>
						<f:FormElement label="Zone">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Loyalty" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Division">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Loyalty" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Depot">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Loyalty" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="Applicable Painters">
					<f:formElements>
						<f:FormElement>
							<f:fields>
								<RadioButtonGroup selectedIndex="0" columns="2">
                                    <RadioButton text="All Painters" />
                                    <RadioButton text="Specific Painter" />
                                </RadioButtonGroup>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="By Arche Type">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Loyalty" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="By Annual Purchase Potential">
							<f:fields>
								<ComboBox placeholder="Select">
                                    <core:Item key="1" text="Emulsion" />
                                    <core:Item key="2" text="Mica Marbel" />
                                </ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="By Product">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Emulsion" />
                                    <core:Item key="2" text="Mica Marbel" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="By Point Slab">
							<f:fields>
								<ComboBox placeholder="Select">
                                    <core:Item key="1" text="Emulsion" />
                                    <core:Item key="2" text="Mica Marbel" />
                                </ComboBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
                <f:FormContainer title="Applicable Products">
					<f:formElements>
						<f:FormElement label="Applicable Products">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Emulsion" />
                                    <core:Item key="2" text="Mica Marbel" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Applicable Packs">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Emulsion" />
                                    <core:Item key="2" text="Mica Marbel" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Purchase Volume Required">
							<f:fields>
								<Input placeholder="Enter Purchase Volume"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Accured Points Required">
							<f:fields>
								<Input placeholder="Enter Accrual Points"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="Rewards">
					<f:formElements>
						<f:FormElement label="Reward Points">
							<f:fields>
								<Input placeholder="Enter Reward Point"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Reward Cash (Rs)">
							<f:fields>
								<Input placeholder="Enter Reward Cash"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Reward Gift">
							<f:fields>
								<ComboBox placeholder="Select">
                                    <core:Item key="1" text="TV" />
                                    <core:Item key="2" text="Washing Machine" />
                                </ComboBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="Additional Points">
					<f:formElements>
						<f:FormElement>
							<f:fields>
								<RadioButtonGroup selectedIndex="0" columns="2">
                                    <RadioButton text="All Painters" />
                                    <RadioButton text="Specific Painter" />
                                </RadioButtonGroup>
							</f:fields>
						</f:FormElement>
                        <f:FormElement>
							<f:fields>
                                <Input placeholder="Enter Value"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Bonus Applicable Products">
							<f:fields>
								<MultiComboBox placeholder="Select">
                                    <core:Item key="1" text="Loyalty" />
                                </MultiComboBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
                <f:FormContainer title="Bonus Validity">
					<f:formElements>
                        <f:FormElement>
							<f:fields>
								<RadioButtonGroup selectedIndex="0" columns="2">
                                    <RadioButton text="Till Duration" />
                                    <RadioButton text="Till Date" />
                                </RadioButtonGroup>
							</f:fields>
						</f:FormElement>
                        <f:FormElement>
							<f:fields>
                                <ComboBox placeholder="Year">
                                    <core:Item key="1" text="2021" />
                                    <core:Item key="2" text="2020" />
                                </ComboBox>
                                <ComboBox placeholder="Month">
                                    <core:Item key="1" text="January" />
                                    <core:Item key="2" text="February" />
                                </ComboBox>
                                <ComboBox placeholder="Day">
                                    <core:Item key="1" text="1 Days" />
                                    <core:Item key="2" text="2 Days" />
                                </ComboBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
                <f:FormContainer title="Status">
					<f:formElements>
                        <f:FormElement label="Status">
							<f:fields>
								<ComboBox placeholder="Select">
                                    <core:Item key="1" text="Accepted" />
                                    <core:Item key="2" text="Rejected" />
                                </ComboBox>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="Reason">
							<f:fields>
                                <TextArea placeholder="Enter Reason"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>