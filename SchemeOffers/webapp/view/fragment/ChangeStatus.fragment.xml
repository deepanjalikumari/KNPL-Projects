<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" id="ChangeStatus" title="{i18n>AddRemark}" titleAlignment="Center">
        <content>
            <f:SimpleForm id="RemarkForm" layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label text="{i18n>Remark}" />
                    <TextArea required="true" placeholder="{i18n>placeHolder3}" maxLength="300" value="{path : 'oModelControl3>/Dialog/Remarks', type : 'sap.ui.model.type.String', constraints : {minLength :1 , maxLength :300, search :'^[a-zA-Z0-9]{1}[wW]*' } }"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Close" press="onCloseStatus" />
            <Button press="onApproveReject" type="Emphasized" text="{i18n>Submit}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>