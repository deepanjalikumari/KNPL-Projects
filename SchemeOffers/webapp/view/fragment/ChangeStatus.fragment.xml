<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog class="sapUiContentPadding" id="ChangeStatus" title="{i18n>AddRemark}" titleAlignment="Center">
        <content>
            <f:SimpleForm id="FormRemark" layout="ResponsiveGridLayout" columnsL="1" columnsM="1" singleContainerFullSize="false">
                <f:content>
                    <Label required="true" text="{i18n>Remark}" />
                    <TextArea value="{oModelControl3>/Dialog/Remarks}" required="true" />
                </f:content>
            </f:SimpleForm>
        </content>
        <buttons>
            <Button text="Close" press="onCloseStatus" />
            <Button press="onApproveReject" type="Emphasized" text="{i18n>saveBtnText}" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>