<mvc:View controllerName="com.knpl.pragati.SchemeOffers.controller.AddOfferPage" height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <f:DynamicPage id="idAddOfferPage" class="actionPage" showFooter="true" busy="{AddOfferViewModel>/busy}">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="{i18n>currentBreadcrumbText}">
                        <Link press="onPressBreadcrumbLink" text="{i18n>homeBreadcrumbText}" />
                    </Breadcrumbs>
                </f:breadcrumbs>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <VBox class="sapUiSmallMargin">
                <OverflowToolbar>
                    <Title level="H1" text="{i18n>AddTitle}" />
                </OverflowToolbar>
                <core:Fragment fragmentName="com.knpl.pragati.SchemeOffers.view.fragment.ChangeDetail" type="XML" />
            </VBox>
        </f:content>
        <f:footer>
            <OverflowToolbar>
				<ToolbarSpacer/>
                <Button text="{i18n>cancelBtnText}" type="Transparent" press="onPressCancel"/>
                <Button text="{i18n>saveBtnText}" type="Emphasized" press="onPressSave"/>
			</OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
